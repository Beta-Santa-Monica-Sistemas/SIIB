@using Beta_System.Models
@model Beta_System.Models.C_usuarios_corporativo
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>SIIB BETA</title>
    <link rel="icon" type="image/png" href="~/Content/img_layout/Logo_beta_icono.png" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link href="~/Content/css/login.css" rel="stylesheet" />
</head>
<body class="bg-light">
    <section>
        <div class="row g-0 min-vh-100">
            <div class="col-md-6">
                <div id="carouselExampleCaptions" class="carousel slide">
                    <div class="carousel-indicators">
                        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
                    </div>
                    <div class="carousel-inner">
                        <div class="carousel-item  img-1 min-vh-100 active">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>Beta Santa Mónica</h5>
                                <p>Developed by Beta Santa Mónica</p>
                            </div>
                        </div>
                        <div class="carousel-item img-2 min-vh-100">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>Beta Santa Mónica</h5>
                                <p>Developed by Beta Santa Mónica</p>
                            </div>
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
            <div class="col-md-6 d-flex flex-column align-items-end ">
                <div class="col-md-12 text-center">
                    <img src="~/Content/img_layout/logo_beta_new.png" alt="" srcset="" class="img_logo">
                </div>
                <div class="px-lg-5 py-lg-4 p-4 w-100">
                    @using (Html.BeginForm())
                    {
                        <h1 class="font-weight-bold mb-4 text-center">Bienvenido de vuelta</h1>
                        <div class="px-lg-5 py-lg-4 p-4 w-100">
                            @Html.AntiForgeryToken()
                            <label for="exampleInputEmail1" class="form-label">Usuario</label>
                            @Html.EditorFor(model => model.usuario, new { htmlAttributes = new { @class = "form-control", style = "text-transform:none;", placeholder = "Ingrese su usuario", autocomplete = "new-password" } })
                            <br />
                            <label for="exampleInputPassword1" class="form-label">Contraseña</label>
                            @Html.PasswordFor(model => model.password, new { autocomplete = "new-password", @class = "form-control", placeholder = "Ingrese su contraseña" })
                            @Html.ValidationMessageFor(model => model.password)
                            <br />
                            <button type="submit" class="btn btn-primary w-100">Acceder</button>
                            <hr />
                            <div class="text-center">
                                <h6><strong style="color:#d52929;"> @ViewBag.Message</strong></h6>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>