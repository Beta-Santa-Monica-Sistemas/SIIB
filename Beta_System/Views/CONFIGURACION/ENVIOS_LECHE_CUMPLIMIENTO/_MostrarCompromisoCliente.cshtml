@model IEnumerable<Beta_System.Models.C_envios_leche_cumplimiento_mensual>
@{
    string enlace = "_";
}

@if (Model.Count() > 0)
{
    <div class="table-responsive">
        <table class="table table-striped table-bordered text-center" id="tablaCompromisoMostrar" style="width:100%">
            <thead>
                <tr>
                    <th colspan="13" class="text-left"><strong>@Model.FirstOrDefault().C_envios_leche_clientes.nombre_comercial</strong></th>
                </tr>
                <tr class="bg-beta text-center">
                    @foreach (var group in Model)
                    {
                        <th style="min-width:7.5%">@group.C_presupuestos_meses.mes</th>
                    }
                    <th style="min-width:10%">Total</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    @foreach (var group in Model)
                    {
                        int diasMes = DateTime.DaysInMonth(Convert.ToInt32(group.C_presupuestos_anios.anio), (int)group.id_mes_presupuesto);
                        <td>
                            <label class="compromisoIDMesEdit" style="display:none">@group.id_mes_presupuesto</label>
                            <label>Lts mensual</label>
                            <input class="form-control litros_mensualEdit" id="litros_mensual_edit_@group.id_envio_leche_cliente_ms@enlace@group.id_mes_presupuesto" value="@group.litros_totales" onkeyup="CalculoLitrosCompromisoEdit(@group.id_envio_leche_cliente_ms,@group.id_mes_presupuesto,@diasMes)" />

                            <label>Lts diario</label>
                            <input class="form-control litros_diarioEdit" id="litros_diario_edit_@group.id_envio_leche_cliente_ms@enlace@group.id_mes_presupuesto" value="@group.litros_dia" disabled />

                            <label>full mensual</label>
                            <input class="form-control full_mensualEdit" id="litros_full_edit_@group.id_envio_leche_cliente_ms@enlace@group.id_mes_presupuesto" value="@group.full_semana" disabled />
                        </td>
                    }
                    <td>
                        <label>Lts mensual</label>
                        <input class="form-control" id="litros_total_mensual_edit" value="@Model.Sum(x=>x.litros_totales)" disabled />

                        <label>Lts diario</label>
                        <input class="form-control" id="litros_total_diario_edit" value="@Model.Sum(x=>x.litros_dia)" disabled />

                        <label>Full mensual</label>
                        <input class="form-control" id="litros_total_full_edit" value="@Model.Sum(x=>x.full_semana)" disabled />
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="col-md-12 text-right">
        <button class="btn btn_beta" onclick="CargaCompromisoClienteEdit(@Model.FirstOrDefault().id_envio_leche_cliente_ms,@Model.FirstOrDefault().C_presupuestos_anios.id_anio_presupuesto, @Model.FirstOrDefault().id_envio_leche_cliente_ms);">Confirmar</button>
    </div>
}
else
{
    <div class="col-md-12 text-center">
        <h2 style="color:red">No se encontró información</h2>
    </div>
}