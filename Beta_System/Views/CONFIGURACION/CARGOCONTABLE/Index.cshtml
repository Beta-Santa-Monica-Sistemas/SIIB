
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<div class="page_title">
    <div class="counter_section">
        <h1>Asignar cargo contable a usuarios</h1>
        <div class="row">
            <div class="col-md-8"></div>
            <div class="col-md-4">
                <strong>Usuario/Empleado:</strong>
                <select class="form-control" id="id_usuario_cargocontable" onchange="ConsultarCargosContables();">
                    @{ Html.RenderAction("ConsultarUsuariosCorporativoSelect", "USUARIOS");}
                </select>
            </div>
            <div class="col-md-12"><br /></div>
            
        </div>
        <br />
        <div class="table-responsive" id="div_cargocontable_usuario">

        </div>
        <br />
        <div class="row">
            <div class="col-md-4 text-left">
                <button class="btn btn_beta" onclick="AsignarCargosContablesUsuario();">Asignar cargo contable</button>
            </div>
            <div class="col-md-4 text-center">
                <button class="btn btn_beta" onclick="AsignarTodoCargoContableUsuario();">Asignar todos los cargos contables</button>
            </div>
            <div class="col-md-4 text-lg-right">
                <button class="btn btn_beta_danger" onclick="RemoverCargoContableUsuario();">Remover todos los cargos contables</button>
            </div>

        </div>
    </div>
</div>

@Scripts.Render("~/bundles_CargoContable/js")

<script>

    $(window).on("load", function () {
        ConsultarCargosContables();

        try {
            $("#id_usuario_centro").select2({
                placeholder: 'Selecciona un usuario',
                //dropdownParent: $("#tabulador")
            });
        }
        catch (ex) { }
    });
</script>