@model IEnumerable<Beta_System.Models.CuentasUsuario>

@if (Model.Count() > 0)
{
    <h3 class="text-center">CARGOS CONTABLES</h3>
    <div class="row">
        @foreach (var item in Model.OrderBy(x => x.Cuentas.C_cargos_contables_g.nombre_cargo).GroupBy(x => x.Cuentas.C_cargos_contables_g))
        {
            <script>
                try { $("#datatable_ctas_us_@item.FirstOrDefault().Cuentas.id_cargo_contable").dataTable().fnDestroy();
                } catch (e) { }
            </script>
            <div class="col-md-3">
                <div class="" id="heading_@item.FirstOrDefault().Cuentas.id_cargo_contable">
                    <div class="w-100 collapsed" style="border: 1px solid black; background-color: rgb(236, 244, 251); height: 80px; min-height: 80px;">
                        <div class="row">
                            <div class="col-md-6 text-left">
                                <h5 class="pt-3 ml-1">@item.FirstOrDefault().Cuentas.C_cargos_contables_g.nombre_cargo</h5>
                            </div>
                            <div class="col-md-3 text-left">
                                <br />
                                <strong class="text-danger">(@item.Where(x => x.Cta_Usuario != null).Count()-@item.Count())</strong>
                            </div>
                            <div class="col-md-1 text-left">
                                <button class="btn btn_beta_icon mt-2" data-toggle="collapse" data-target="#collapse_@item.FirstOrDefault().Cuentas.id_cargo_contable" aria-expanded="false" aria-controls="collapse_@item.FirstOrDefault().Cuentas.id_cargo_contable"><i class="fa fa-bars"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="collapse_@item.FirstOrDefault().Cuentas.id_cargo_contable" class="collapse btn_detalle_requi_aut" aria-labelledby="heading_@item.FirstOrDefault().Cuentas.id_cargo_contable" data-parent="#accordionSolicitudes">
                    <div class="table-responsive" style="overflow: auto; overflow-x: hidden; height: 200px; min-height: 200px;">
                        <table class="table table-striped table-bordered table-hover table-sm small" id="datatable_ctas_us_@item.FirstOrDefault().Cuentas.id_cargo_contable">
                            <thead>
                                <tr class="bg-beta text-center">
                                    <th>Cuenta</th>
                                    <th style="width: 70%;">Nombre</th>
                                    <th>Asignar</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr class="bg-green text-center">
                                    <td></td>
                                    <td></td>
                                    <td>
                                        <strong>Todas</strong>
                                        <input class="form-control" id="check_todas_@item.FirstOrDefault().Cuentas.id_cuenta_contable" onclick="CheckAllCuentasCargo(@item.FirstOrDefault().Cuentas.id_cuenta_contable);" type="checkbox" style="height: 20px; min-height: 20px; width: 100%;"/></td>
                                </tr>
                                @foreach (var detalle in item.Where(x => x.Cta_Usuario != null).OrderBy(x => x.Cuentas.nombre_cuenta))
                                {
                                    <tr class="text-center">
                                        <td><strong>@detalle.Cuentas.cuenta</strong></td>
                                        <td class="text-left"><strong>@detalle.Cuentas.nombre_cuenta</strong></td>
                                        <td>
                                            @if (detalle.Cta_Usuario == null)
                                            {
                                                <input class="form-control check_cargo_@item.FirstOrDefault().Cuentas.id_cuenta_contable" id="@detalle.Cuentas.id_cuenta_contable" type="checkbox" name="check_cuenta" style="height: 20px; min-height: 20px; width: 100%;" />
                                            }
                                            else
                                            {
                                                <input class="form-control check_cargo_@item.FirstOrDefault().Cuentas.id_cuenta_contable" id="@detalle.Cuentas.id_cuenta_contable" type="checkbox" name="check_cuenta" style="height: 20px; min-height: 20px; width: 100%;" checked />
                                            }
                                        </td>
                                    </tr>
                                }
                                @foreach (var detalle in item.Where(x => x.Cta_Usuario == null).OrderBy(x => x.Cuentas.nombre_cuenta))
                                {
                                    <tr class="text-center">
                                        <td><strong>@detalle.Cuentas.cuenta</strong></td>
                                        <td class="text-left"><strong>@detalle.Cuentas.nombre_cuenta</strong></td>
                                        <td>
                                            @if (detalle.Cta_Usuario == null)
                                            {
                                                <input class="form-control check_cargo_@item.FirstOrDefault().Cuentas.id_cuenta_contable" id="@detalle.Cuentas.id_cuenta_contable" type="checkbox" name="check_cuenta" style="height: 20px; min-height: 20px; width:100%;" />
                                            }
                                            else
                                            {
                                                <input class="form-control check_cargo_@item.FirstOrDefault().Cuentas.id_cuenta_contable" id="@detalle.Cuentas.id_cuenta_contable" type="checkbox" name="check_cuenta" style="height: 20px; min-height: 20px; width: 100%;" checked />
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <script>
                $('#datatable_ctas_us_@item.FirstOrDefault().Cuentas.id_cargo_contable').DataTable({
                    keys: false,
                    select: false,
                    ordering: false,
                    paging: false,
                    buttons: [],
                    dom: "Bfrtip",
                    responsive: false
                });
            </script>
        }
    </div>
    
}
else
{
    <h3 class="text-center text-danger">NO SE ENCONTRÓ INFORMACIÓN</h3>
}


