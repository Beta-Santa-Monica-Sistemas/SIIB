
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<div class="page_title">
    <div class="counter_section">
        <h1>Asignar centro a usuarios</h1>
        <div class="row">
            <div class="col-md-8"></div>
            <div class="col-md-4">
                <strong>Usuario/Empleado:</strong>
                <select class="form-control" id="id_usuario_centro" onchange="ConsultarCentros();">
                    @{ Html.RenderAction("ConsultarUsuariosCorporativoSelect", "USUARIOS");}
                </select>
            </div>
            <div class="col-md-12"><br /></div>
            <div class="col-md-12 text-lg-right">
                <button class="btn btn_beta" onclick="AsignarTodoCentroUsuario();">Asignar todos los centros</button>
            </div>
        </div>
        <br />
        <div class="table-responsive" id="div_centro_usuario">

        </div>
        <br />
        <div class="row">
            <div class="col-md-6 text-right">
                <button class="btn btn_beta" onclick="AsignarCentroUsuario();">Asignar centro</button>
            </div>
            <div class="col-md-6 text-lg-right">
                <button class="btn btn_beta_danger" onclick="RemoverCentroUsuario();">Remover todos los centros</button>
            </div>
            
        </div>        
    </div>
</div>

@Scripts.Render("~/bundles_Centro/js")

<script>

    $(window).on("load", function () {
        ConsultarCentros();

        try {
            $("#id_usuario_centro").select2({
                placeholder: 'Selecciona un usuario',
                //dropdownParent: $("#tabulador")
            });
        }
        catch (ex) { }
    });
</script>