
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MainLayout.cshtml";
    List<int> permisos = Session["PermisosModulo"] as List<int>;
}
<style>
    .ui-menu {
        z-index: 1550;
    }

    #m_lupa_proveedor {
        z-index: 1500;
    }

    #m_factura_proveedor {
        z-index: 1500;
    }
</style>
<div class="page_title">
    <div class="counter_section">
        <h1>Administracion de usuarios proveedor</h1>
    </div>
</div>


<div class="column2 counter_section">
    <div id="admin_empleados" class="tab-pane fade in active show">
        <div class="row">
            <div class="col-md-12 text-right">
                <button class="btn btn_beta" onclick="AccionModalProveedor(1);">Registrar proveedor </button>
            </div>

            <div class="table-responsive">
                <div id="div_cuentas_proveedor"></div>
            </div>
        </div>
    </div>
</div>

<!--Modal Cuenta Proveedor-->
<div class="modal fade" id="m_ingresar_proveedor" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="lbl_ingresar_proveedor">REGISTRAR CUENTA PROVEEDOR</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body text-center">
                <div class="col-md-12">
                    <strong>Usuario RFC:</strong>
                    <input type="text" class="form-control" id="txt_usuario_rfc" onkeyup="LimpiarKeyPressBorder();" />
                </div>
                <div class="col-md-12">
                    <strong>Password:</strong>
                    <input type="text" class="form-control" id="txt_password" onkeyup="LimpiarKeyPressBorder();" />
                </div>
                <div class="col-md-11">
                    <strong>Proveedor</strong>
                    <input type="text" class="form-control" id="proveedor_nombre">
                </div>
                <div class="col-md-1" style="display: flex; justify-content: center; align-items: center;">
                    <div style="padding-top: 26px;">
                        <i class="fa fa-2x fa-search text_beta" onclick="LupaProveedores(3);"></i>
                    </div>
                </div>
                <div class="col-md-12">
                    <label id="id_compras_proveedor" style="display:none"></label>
                    <hr />
                </div>
                <button id="btn_add_update_rol" class="btn btn_beta" onclick="RegistrarProveedorCuenta();">GUARDAR</button>
            </div>
        </div>
    </div>
</div>

<!--Modal LUPA Proveedor-->
<div class="modal fade" id="m_lupa_proveedor" tabindex="-1" role="dialog" aria-labelledby="m_lupa_proveedor" aria-hidden="true">
    <div class="modal-dialog" role="document" style="min-width:75%;">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title" id="m_lupa_proveedor_lbl">Lista de proveedores</h2>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="div_lupa_proveedor"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn_beta_danger" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

<!--Modal Facturas Proveedor-->
<div class="modal fade" id="m_factura_proveedor" tabindex="-1" role="dialog" aria-labelledby="m_factura_proveedor" aria-hidden="true">
    <div class="modal-dialog" role="document" style="min-width:75%;">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title" id="m_factura_proveedor_lbl">Lista de facturas</h2>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="div_factura_proveedor"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn_beta_danger" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/bundles_Proveedores/js")
@Scripts.Render("~/bundles_Propiedades/js")

<script>
    $(window).on("load", function () {
        MostrarProveedoresTable();

        $("#proveedor_nombre").autocomplete({
            source: function (request, response) {
                $.ajax({
                    type: "POST",
                    async: true,
                    url: "../PROVEEDORES/ConsultarProveedoresArray",
                    data: {
                        search: $("#proveedor_nombre").val()
                    },
                    success: function (data) {
                        var data2 = $.parseJSON(data);
                        response($.map(data2, function (item) {
                            return { label: item.razon_social + " | " + item.clave_fiscal, value: item.razon_social };
                        }))
                    },
                    error: function (xhr, status, error) {
                        alert(error);
                    }
                });
            }
        });

        $('#proveedor_nombre').keydown(function (e) {
            if ($("#proveedor_nombre").val() != '') {
                if (e.keyCode === 13 || e.keyCode === 9) {
                    ConsultarProvNombre();
                }
            }

        });
        $("#ui-id-1").on('click', function (event) {
            ConsultarProvNombre();
        });
    });
</script>