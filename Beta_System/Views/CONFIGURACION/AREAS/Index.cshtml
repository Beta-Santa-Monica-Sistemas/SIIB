
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<div class="page_title">
    <div class="counter_section">
        <h1>Asignar areas a usuarios</h1>
        <div class="row">
            <div class="col-md-8"></div>
            <div class="col-md-4">
                <strong>Usuario/Empleado:</strong>
                <select class="form-control" id="id_usuario_area" onchange="ConsultarAreasNomina();">
                    @{ Html.RenderAction("ConsultarUsuariosCorporativoSelect", "USUARIOS");}
                </select>
            </div>
            <div class="col-md-12"><br /></div>
            <div class="col-md-12 text-lg-right">
                <button class="btn btn_beta" onclick="AsignarTodoAreasNominaUsuario();">Asignar todas las areas</button>
            </div>
        </div>
        <br />
        <div class="table-responsive" id="div_areas_usuario">

        </div>
        <br />
        <div class="row">
            <div class="col-md-6 text-right">
                <button class="btn btn_beta" onclick="AsignarAreasNominaUsuario();">Asignar area</button>
            </div>
            <div class="col-md-6 text-lg-right">
                <button class="btn btn_beta_danger" onclick="RemoverAreasNominaUsuario();">Remover todas las areas</button>
            </div>

        </div>
    </div>
</div>

@Scripts.Render("~/bundles_Area/js")

<script>

    $(window).on("load", function () {
        ConsultarAreasNomina();
    });
</script>