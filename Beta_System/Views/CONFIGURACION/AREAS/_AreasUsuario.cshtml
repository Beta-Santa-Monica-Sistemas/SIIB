@model IEnumerable<Beta_System.Models.C_nomina_departamentos>

<table class="table table-striped table-bordered">
    <thead>
        <tr class="bg-beta text-center">
            <th>Area</th>
            <th>Asignado</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderBy(x => x.nombre_departamento))
        {
            <tr>
                <td>@item.nombre_departamento</td>
                <td>
                    <input class="form-control check_area" type="checkbox" id="@item.id_departamento_empleado" style="height:20px;" />
                </td>
            </tr>
        }
    </tbody>
</table>
