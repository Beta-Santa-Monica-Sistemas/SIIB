@model IEnumerable<Beta_System.Models.ArticulosPreciosForrajes>

@if (Model.Count() > 0)
{
    <div class="table-responsive">
        <table class="table table-striped table-bordered" id="datatable_precios_forraje">
            <thead>
                <tr class="bg-beta text-center">
                    <th>Clave</th>
                    <th>Ingredeiente</th>
                    <th>Precio</th>
                    <th>Ultima modificación</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td>@item.Articulos.clave</td>
                        <td>@item.Articulos.nombre_articulo</td>
                        @if (item.Precios == null)
                        {
                            <td>
                                <input type="number" value="0" class="form-control id_articulos_forrajes_precios" id="ArtForrajePrecio_@item.Articulos.id_articulo" />
                            </td>
                            <td><strong class="text-danger">NO REGISTRADO</strong></td>
                        }
                        else
                        {
                            <td>
                                <input type="number" value="@item.Precios.precio_articulo" class="form-control id_articulos_forrajes_precios" id="ArtForrajePrecio_@item.Articulos.id_articulo" />
                            </td>
                            <td><strong>@string.Format(item.Precios.fecha_ultima_actualizacion.Value.ToShortDateString(), "dd/MM/yyyy")</strong></td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="text-right">
        <button class="btn_beta" onclick="GuardarPreciosArticulosForrajes();">Actualizar precios</button>
    </div>
}
else
{
    <div class="text-center">
        <h3 class="text-danger">No se encontraron articulos configurados como alimento</h3>
        <a href="https://siib.beta.com.mx/ARTICULOS/AdministrarArticulos"><h4 class="btn_beta">Ingresar al módulo de artículos</h4></a>
    </div>


}

