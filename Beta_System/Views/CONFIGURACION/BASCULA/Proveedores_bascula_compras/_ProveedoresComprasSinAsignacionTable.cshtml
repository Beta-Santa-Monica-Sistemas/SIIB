@model List<Beta_System.Models.C_compras_proveedores>

@if (Model.Count() > 0)
{
    <table class="table table-striped table-bordered" id="datatable_proveedores_compras">
        <thead>
            <tr class="bg-beta text-center">
                <th>Seleccionar</th>
                <th>Proveedor</th>
                <th>Descripción</th>
                <th>Moneda</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="text-center">
                    <td>
                        <input type="radio" name="id_proveedor_compras_asociacion" value="@item.id_compras_proveedor" class="form-control" style="height:25px;" />
                    </td>
                    <td>@item.cve</td>
                    <td><strong><strong>@item.razon_social</strong></strong></td>
                    <td>@item.C_tipos_moneda.clave_fiscal</td>
                </tr>
            }
        </tbody>
    </table>
}