@model List<Beta_System.Models.C_bascula_proveedores_compras>
@if (Model.Count() > 0)
{
<table class="table table-striped table-bordered" id="datatable_proveedores_asociados">
    <thead>
        <tr class="bg-beta text-center">
            <th>Proveedor bascula</th>
            <th>Proveedor compras</th>
            <th>Moneda</th>
            <th>Eliminar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderBy(x => x.C_bascula_proveedores.nombre_prov))
        {
            <tr class="text-center">
                <td class="text-left">@item.C_bascula_proveedores.nombre_prov <strong>(@item.C_bascula_proveedores.clave_prov)</strong></td>
                <td class="text-left">@item.C_compras_proveedores.razon_social <strong>(@item.C_compras_proveedores.cve)</strong></td>
                <td>@item.C_compras_proveedores.C_tipos_moneda.clave_fiscal</td>
                <td>
                    <button class="btn btn_beta_danger" onclick="EliminarAsociacionProveedoresBasculaCompras(@item.id_proveedor_bascula_compras);"><i class="fa fa-remove"></i></button>
                </td>
            </tr>
        }
    </tbody>
</table>
}

