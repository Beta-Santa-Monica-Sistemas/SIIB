@model IEnumerable<Beta_System.Models.C_envios_leche_destinos>
<table class="table table-striped table-bordered w-100" id="tabla_bascula_destino" width="100%">
    <thead>
        <tr class="bg-beta text-center">
            <th>Destino</th>
            <th>Estatus</th>
            <th>Editar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="text-center">
                <td>@item.nombre_destino</td>
                <td class="text-center">
                    @if (item.activo == true)
                    {
                        <i class="fa fa-3x fa-toggle-on" onclick="OnOffDestinosCatalogoBascula('@item.id_destino_envio_leche',false);" style="color:lightgreen;"></i>
                    }
                    else
                    {

                        <i class="fa fa-3x fa-toggle-on" onclick="OnOffDestinosCatalogoBascula('@item.id_destino_envio_leche',true);" style="color:gray;"></i>
                    }

                </td>
                <td class="text-center">
                    <button class="btn btn_beta_icon" onclick="AsignarInformacionDestinosCatalogoBascula(@item.id_destino_envio_leche);"><i class="fa fa-edit"></i></button>
                </td>
            </tr>
        }
    </tbody>
</table>