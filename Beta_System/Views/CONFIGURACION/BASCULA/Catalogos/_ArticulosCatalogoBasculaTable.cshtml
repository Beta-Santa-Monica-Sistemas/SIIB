@model IEnumerable<Beta_System.Models.C_bascula_articulos>
<table class="table table-striped table-bordered w-100" id="tabla_bascula_articulos" width="100%">
    <thead>
        <tr class="bg-beta text-center">
            <th>Articulo</th>
            <th>U.Medida</th>
            <th>Estatus</th>
            <th>Editar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="text-center">
                <td>@item.nombre_articulo</td>
                @if (item.id_unidad_medida != null)
                {
                    <td>@item.C_unidades_medidas.unidad_medida</td>
                }
                else
                {
                    <td style="color:red">PENDIENTE</td>
                }

                <td class="text-center">
                    @if (item.activo == true)
                    {
                        <i class="fa fa-3x fa-toggle-on" onclick="OnOffArticuloCatalogoBascula('@item.id_bascula_articulo',false);" style="color:lightgreen;"></i>
                    }
                    else
                    {

                        <i class="fa fa-3x fa-toggle-on" onclick="OnOffArticuloCatalogoBascula('@item.id_bascula_articulo',true);" style="color:gray;"></i>
                    }
                </td>
                <td class="text-center">
                    <button class="btn btn_beta_icon" onclick="AsignarInformacionArticuloCatalogoBascula(@item.id_bascula_articulo);"><i class="fa fa-edit"></i></button>
                </td>
            </tr>
        }
    </tbody>
</table>