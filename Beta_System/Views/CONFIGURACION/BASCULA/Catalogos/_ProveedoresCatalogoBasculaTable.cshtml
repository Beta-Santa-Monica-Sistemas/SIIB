@model IEnumerable<Beta_System.Models.C_bascula_proveedores>
<table class="table table-striped table-bordered w-100" id="tabla_bascula_proveedores" width="100%">
    <thead>
        <tr class="bg-beta text-center">
            <th>Clave</th>
            <th>Proveedor</th>
            <th>Estatus</th>
            <th>Editar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="text-center">
                <td>@item.clave_prov</td>
                <td>@item.nombre_prov</td>
                <td class="text-center">
                    @if (item.activo == true)
                    {
                        <i class="fa fa-3x fa-toggle-on" onclick="OnOffProveedoresCatalogoBascula('@item.id_bascula_proveedor',false);" style="color:lightgreen;"></i>
                    }
                    else
                    {

                        <i class="fa fa-3x fa-toggle-on" onclick="OnOffProveedoresCatalogoBascula('@item.id_bascula_proveedor',true);" style="color:gray;"></i>
                    }

                </td>
                <td class="text-center">
                    <button class="btn btn_beta_icon" onclick="AsignarInformacionProveedoresCatalogoBascula(@item.id_bascula_proveedor, '@item.clave_prov');"><i class="fa fa-edit"></i></button>
                </td>
            </tr>
        }
    </tbody>
</table>