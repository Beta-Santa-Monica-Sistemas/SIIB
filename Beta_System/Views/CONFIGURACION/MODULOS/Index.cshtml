
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<div class="page_title">
    <div class="counter_section">
        <h1>Asignador de módulos a roles</h1>
        <div class="row">
            <div class="col-md-9"></div>
            <div class="col-md-3 text-right">
                <strong>ROLES:</strong>
                <br />
                <select class="form-control id_rol_select" id="id_rol_select" onchange="ConsultarModulosRol();">
                    @{ Html.RenderAction("ConsultarRoles", "ROLES", new { id_status = 1 }); }
                </select>
            </div>
        </div>
        <br />
        <hr />
        <div class="table-responsive">
            <div id="div_modulos_submodulos">

            </div>
        </div>
        <br />
        <button class="btn btn_beta" onclick="AsignarModulosRol();">Asignar modulos</button>

    </div>

</div>

@Scripts.Render("~/bundles_Modulo/js")

<script>

    $(window).on("load", function () {
        ConsultarModulosRol();
    });

    try {
        $("#id_rol_select").select2({
            placeholder: 'Selecciona un rol',
            //dropdownParent: $("#tabulador")
        });
    }
    catch (ex) { }
</script>


