@model IEnumerable<Beta_System.Models.ReporteInversiones>

@{
    List<int> permisos = Session["PermisosModulo"] as List<int>;
}

<table class="table table-striped table-bordered w-100" id="datatable_inversiones_reporte" width="100%">
    <tr class="bg-beta text-center">
        <th class="headerConcepto">Fecha Compra</th>
        <th class="headerConcepto">Justificación</th>
        <th class="headerConcepto">Descripción</th>
        <th class="headerConcepto">Folio inversión</th>
        <th class="headerConcepto">Orden de compra</th>
        <th class="headerConcepto">Requisición</th>
        <th class="headerConcepto">Centro</th>
        <th class="headerConcepto">Usuario registra</th>
        <th class="headerConcepto">Usuario autoriza</th>
        <th class="headerConcepto">Monto inversión</th>
        <th class="headerConcepto">Monto orden</th>
        <th class="headerConcepto">Diferencia</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr class="text-center">
            <td>@item.Fecha</td>
            <td class="text-left">@item.Justificacion</td>
            <td class="text-left">@item.Concepto</td>
            <td>@item.Folio</td>
            <td>@item.OrdenCompra</td>
            <td>@item.Requisicion</td>
            <td>@item.Centro</td>
            <td>@item.Usuario_registra</td>
            <td>@item.Usuario_autoriza</td>
            <td>@item.Monto_inversion.ToString("N3")</td>
            <td>@item.Monto_orden.ToString("N3")</td>
            <td>@item.Diferencia.ToString("N3")</td>
        </tr>
    }
</table>