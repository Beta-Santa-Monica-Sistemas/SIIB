@model IEnumerable<Beta_System.Models.ReporteInversiones>

@{
    List<int> permisos = Session["PermisosModulo"] as List<int>;
}

<table class="table table-striped table-bordered w-100" id="datatable_inversiones_reporte" width="100%">
    <thead>
        <tr class="bg-beta text-center">
            <th>Fecha Compra</th>
            <th>Justificacion</th>
            <th>Inversion</th>
            <th>Folio inversión</th>
            <th>Requisición</th>
            <th>Centro</th>
            <th>Usuario registra</th>
            <th>Usuario autoriza</th>
            <th>Monto inversión</th>
            <th>Monto orden</th>
            <th>Diferencia</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="text-center">
                <td>@item.Fecha</td>
                <td class="text-left">@item.Justificacion</td>
                <td class="text-left">@item.Concepto</td>
                <td>@item.Folio</td>
                <td>@item.Requisicion</td>
                <td>@item.Centro</td>
                <td>@item.Usuario_registra</td>
                <td>@item.Usuario_autoriza</td>
                <td>@item.Monto_inversion.ToString("N3")</td>
                <td>@item.Monto_orden.ToString("N3")</td>
                <td>
                    @if (item.Diferencia >= 0)
                    {
                        <strong style="color:green">@item.Diferencia.ToString("N3")</strong>
                    }
                    else
                    {
                        <strong style="color:red">@item.Diferencia.ToString("N3")</strong>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>