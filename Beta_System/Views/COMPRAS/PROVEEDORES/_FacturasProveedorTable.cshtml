@model IEnumerable<Beta_System.Models.C_compras_facturas_proveedores>
@{
    List<int> permisos = Session["PermisosModulo"] as List<int>;
}
@if (Model.Count() == 0)
{
    <h2 class="text-center text-danger">SIN HISTORIAL DE FACTURAS</h2>
}
else
{
    <table class="table table-striped table-bordered" id="proveedores_facturas_hist">
        <thead>
            <tr class="bg-beta text-center">
                <th>No. Orden</th>
                <th>Centro</th>
                <th>Requisición</th>
                <th>Folio</th>
                <th>Fecha</th>
                <th>Subtotal</th>
                <th>IVA monto</th>
                <th>IVA retenido</th>
                <th>ISR</th>
                <th>Total</th>
                <th>Moneda</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="text-center">
                    <td>@item.id_compras_orden_g</td>
                    <td>@item.C_compras_ordenes_g.C_centros_g.siglas</td>
                    <td>@item.C_compras_ordenes_g.id_requisicion_articulo_g</td>
                    <td>@item.folio_factura</td>
                    <td>@string.Format(item.fecha_registro.Value.ToShortDateString(), "dd/MM/yyyy")</td>
                    <td>@item.subtotal.Value.ToString("N2")</td>
                    <td>@item.iva_monto.Value.ToString("N2")</td>
                    <td>@item.iva_monto.Value.ToString("N2")</td>
                    <td>@item.isr_monto.Value.ToString("N2")</td>
                    <td>@item.total.Value.ToString("N2")</td>
                    <td>@item.moneda</td>
                </tr>
            }
        </tbody>
    </table>
}