@model IEnumerable<Beta_System.Models.C_compras_proveedores_portal_solicitudes>

@if (Model.Count() > 0)
{
    var id_status = ViewBag.id_status;

    var clase = "";
    if (id_status == 1) { clase = "table_solicitudes_pend"; }
    else if (id_status == 4) { clase = "table_solicitudes_aut"; }
    else if (id_status == 3) { clase = "table_solicitudes_rech"; }

    <table class="table table-striped table-bordered" id="@clase">
        <thead>
            <tr class="bg-beta text-center">
                <th>No. solicitud</th>
                <th>Razón social</th>
                <th>RFC</th>
                <th>Contacto</th>
                <th>Correo</th>
                <th>Copia de RFC</th>
                <th>Comprobante de domicilio</th>
                <th>Estado de cuenta</th>
                <th>Formato positivo 32 D</th>
                <th>Estatus</th>
                <th>Mostrar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="text-center">
                    <td>@item.id_proveedor_solicitud</td>
                    <td>@item.razon_social</td>
                    <td>@item.RFC</td>
                    <td>@item.nombre_contacto</td>
                    <td>@item.correo</td>

                    <td>Copia de RFC</td>
                    <td>Comprobante de domicilio</td>
                    <td>Estado de cuenta bancaria </td>
                    <td>Formato positivo 32 D</td>
                    <td><button class="btn btn_beta" style="background-color:@item.C_compras_proveedores_portal_solicitudes_status.color">@item.C_compras_proveedores_portal_solicitudes_status.nombre_status</button></td>

                    <td><button class="btn btn_beta_icon" onclick="ConsultarDetalleSolicitud(@item.id_proveedor_solicitud);"><i class="fa fa-bars"></i></button></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h3><strong class="text-center text-danger">No se encontraron solicitudes</strong></h3>
}




