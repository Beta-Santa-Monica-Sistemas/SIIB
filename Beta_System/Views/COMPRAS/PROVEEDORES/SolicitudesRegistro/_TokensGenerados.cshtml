@model IEnumerable<Beta_System.Models.C_compras_proveedores_portal_tokens>

<table class="table table-striped table-bordered" style="width:100%;" id="datatable_tokens_generados">
    <thead>
        <tr class="bg-beta text-center">
            <th>Nombre del token</th>
            <th>Fecha de registro</th>
            <th>Usuario registró</th>
            <th>Ejercido</th>
            <th>Fecha registro</th>
            <th>Proveedor registrado</th>
            <th>Fecha aplicado</th>
            <th>Copiar codigo</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="text-center">
                <td>@item.nombre_proveedor</td>
                <td>@string.Format(item.fecha_registro.Value.ToShortDateString(), "dd/mm/yyyy")</td>
                <td>@item.C_usuarios_corporativo.C_empleados.nombres @item.C_usuarios_corporativo.C_empleados.apellido_paterno</td>
                <td>
                    @if (item.ejercido == true)
                    {<i class="fa fa-check text-success"></i> }
                    else
                    { <i class="fa fa-clock-o text-secondary"></i>}
                </td>
                <td>
                    @try
                    {<strong>@string.Format(item.fecha_registro.Value.ToShortDateString(), "dd/mm/yyyy")</strong>}
                catch (Exception) { }
                </td>
                <td>
                    @try
                    {<strong>@item.C_compras_proveedores_portal_solicitudes.FirstOrDefault().C_compras_proveedores.nombre_prov</strong>}
                catch (Exception) { }
                </td>
                <td>
                    @try
                    {<strong>@string.Format(item.fecha_ejercido.Value.ToShortDateString(), "dd/mm/yyyy")</strong>}
                catch (Exception) { }
                </td>
                <td>
                    <button class="btn btn_beta_icon" runat="server" Text="Copiar Token" onclick="CopiarTokenPortapapeles('@item.codigo_token');"><i class="fa fa-copy"></i></button>
                </td>
            </tr>
        }
    </tbody>
</table>

