@model IEnumerable<Beta_System.Models.C_usuarios_proveedores>
@{
    List<int> permisos = Session["PermisosModulo"] as List<int>;
}
<table class="table table-striped table-bordered" id="proveedores_cuentas" style="width:100%">
    <thead>
        <tr class="bg-beta text-center">
            <th>Clave</th>
            <th>Razón social</th>
            <th>Usuario</th>
            <th>Contraseña</th>
            <th>Moneda</th>
            <th>Dias de pago</th>
            <th>Facturas</th>
            <th>Estatus</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="text-center">
                <td>@item.C_compras_proveedores.id_proveedor_microsip</td>
                <td class="text-left"><strong>@item.C_compras_proveedores.razon_social</strong></td>
                <td>@item.usuario_rfc</td>
                <td><strong>@item.pass</strong></td>
                <td><strong>@item.C_compras_proveedores.C_tipos_moneda.clave_fiscal</strong></td>
                <td>@item.C_compras_proveedores.dias_pago</td>
                <td><button class="btn btn_beta" onclick="MostrarProveedoresFacturas(@item.id_compras_proveedor);"><i class="fa fa-book"></i></button></td>
                <td class="text-center">
                    @if (item.activo == true)
                    {
                        <i class="fa fa-3x fa-toggle-on" onclick="OnOffProveedores(false,'@item.id_usuario_proveedor');" style="color:lightgreen;"></i>
                    }
                    else
                    {

                        <i class="fa fa-3x fa-toggle-on" onclick="OnOffProveedores(true, '@item.id_usuario_proveedor');" style="color:gray;"></i>
                    }

                </td>
            </tr>
        }
    </tbody>
</table>