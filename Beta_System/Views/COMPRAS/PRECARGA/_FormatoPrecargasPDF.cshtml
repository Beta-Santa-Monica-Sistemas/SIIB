@model IEnumerable<Beta_System.Models.C_compras_ordenes_precarga_g>

<div class="row">
    <div class="col-md-2">
        <img src="~/Content/img_layout/logo_beta_new.png" style="width: 100%;" />
    </div>
    <div class="col-md-8 text-center">
        <h3 style="margin: 5px;">Beta Santa Mónica S.P.R. de R.L. de C.V.</h3>
        <h2 style="margin: 5px;">ENVÍO DE MERCANCÍA</h2>
    </div>
    <div class="col-md-2 text-right">
        <strong>Fecha impresión:</strong>
        <br />
        <strong>@string.Format(DateTime.Now.ToString(), "dd/mm/yyyy HH:ss")</strong>
    </div>
</div>
<hr />
<table class="table table-striped table-bordered">
    <thead>
        <tr class="text-center bg-beta">
            <th>No. Orden</th>
            <th>Requisición</th>
            <th>Ubicación de entrega</th>
            <th>Destinatario</th>
            <th>Artículos</th>
            <th>Entregados</th>
            <th>Pendientes</th>
            <th>Entregados</th>
            <th style="width: 20%;">Firma de recibido</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var orden = item.C_compras_ordenes_g;
            <tr class="text-center">
                <td>@item.id_compras_orden_g</td>
                <td>@item.C_compras_ordenes_g.C_centros_g.siglas @item.C_compras_ordenes_g.id_requisicion_articulo_g</td>
                <td class="text-left">@item.C_compras_ordenes_g.C_compras_ordenes_ubicaciones_entrega.nombre_ubicacion</td>
                <td class="text-left">@item.C_compras_ordenes_g.C_compras_requi_g.C_usuarios_corporativo5.C_empleados.nombres @item.C_compras_ordenes_g.C_compras_requi_g.C_usuarios_corporativo5.C_empleados.apellido_paterno</td>
                <td>@orden.C_compras_ordenes_d.Where(x => x.activo == true).Count()</td>
                <td>@orden.C_compras_ordenes_d.Where(x => x.activo == true && x.entregado == true).Count()</td>
                <td>@orden.C_compras_ordenes_d.Where(x => x.activo == true && x.entregado == false).Count()</td>

                <td></td>
                <td></td>
            </tr>
        }
    </tbody>
</table>

