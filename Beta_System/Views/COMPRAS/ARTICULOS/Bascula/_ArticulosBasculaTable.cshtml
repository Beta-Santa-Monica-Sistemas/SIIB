@model IEnumerable<Beta_System.Models.C_articulos_catalogo>
@{
    var articulo_tipo = ViewBag.articulo_bascula_tipo as List<Beta_System.Models.C_bascula_fichas_tipos>;
}
<table class="table table-striped table-bordered" id="tabla_articulos_bascula" width="100%">
    <thead>
        <tr class="bg-beta text-center">
            <th class="text-center">
                <label>Seleccione</label>
                <input type="checkbox" value="0" id="check_all_articulos_bascula" onchange="CheckAllArticulosBascula();" class="form-control" style="width: 20px; height: 20px;" />
            </th>
            <th>Clave</th>
            <th>Artículo</th>
            <th>Medida</th>
            <th>Clasificación</th>
            @foreach (var item in articulo_tipo)
            {
                if (item.id_ficha_tipo == 1){ <th>Leche</th> }
                else {  <th>@item.tipo_ficha</th>}
            }
            <th>Activo</th>
            @*<th>Activo en básula</th>*@
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="text-center">
                <td>
                    <input id="check_articulo_bascula_@item.id_articulo" type="checkbox" class="form-control articulo_bascula_check" style="width: 20px; height: 20px;">
                </td>
                <td id="@item.id_articulo">@item.clave</td>
                <td>@item.nombre_articulo</td>
                <td>@item.C_unidades_medidas.unidad_medida</td>
                <td>@item.C_articulos_clasificaciones.nombre_clasificacion</td>
                @foreach (var tipo in articulo_tipo)
                {
                    if (item.C_articulos_catalogo_bascula.Where(x => x.activo == true).Select(x => x.id_ficha_tipo).Contains(tipo.id_ficha_tipo))
                    {
                        <td style="color: green"><i class="fa fa-2x fa-check"></i></td>
                    }
                    else
                    {
                        <td style="color: red"><i class="fa fa-2x fa-times"></i></td>
                    }
                }
                @if (item.activo == true)
                    {
                        <td style="color: #2e87d7"><i class="fa fa-2x fa-toggle-on"></i></td>
                    }
                    else
                    {
                        <td style="color: grey"><i class="fa fa-2x fa-toggle-on"></i></td>
                    }
            </tr>
        }
    </tbody>
</table>