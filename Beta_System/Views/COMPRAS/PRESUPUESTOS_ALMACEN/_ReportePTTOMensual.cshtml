@model IEnumerable<Beta_System.Models.ReporteMensualCuentaAlmacen>
@{ 
    var mes = ViewBag.PTTOMes;
    var cuenta = ViewBag.CuentaAlmacen;
    var descipcion = ViewBag.DescAlmacen;
    var total = ViewBag.TotalPTTO;
}
@if (Model.Count() > 0)
{
    <div class="row">
        <div class="col-md-12">
            <h2>Consumo de @mes</h2>
        </div>
        <div class="col-md-8">
            <h3>@cuenta @descipcion</h3>
        </div>
        <div class="col-md-4">
            <h3>Consumo Mensual: @string.Format("{0:C}", @total)</h3>
        </div>
        <div class="col-md-12"><hr /></div>
    </div>
        
    <table class="table table-striped table-bordered" id="tabla_ppto_mensual">
        <thead>
            <tr class="bg-beta text-center">
                <th>Folio</th>
                <th>Fecha</th>
                <th>Importe</th>
                <th>Concepto</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="text-center">
                    <td>@item.id_almacen_g</td>
                    <td>@item.fecha</td>
                    <td>@string.Format("{0:C}", @item.importe)</td>
                    <td>@item.concepto</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h3 style="color:red">NO SE TIENE CONSUMO</h3>
}
