@model List<Beta_System.Models.C_compras_cotizaciones_requisiciones>
<table class="table table-striped table-bordered text-center" id="datatable_articulos_cotizacion" style="width:100%;">
    <thead>
        <tr class="bg-beta">
            <td>Proveedor</td>
            <td>Cotización</td>
            <td>Vigencia</td>
            <td>Cantidad</td>
            <td>Precio unitario</td>
            <td>Descuento(%)</td>
            <td>Precio final</td>
            <td>Moneda</td>
            <td>Eliminar</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.C_compras_cotizaciones_articulos.C_compras_proveedores.razon_social</td>
                <td>@String.Format(item.fecha_registro.Value.ToShortDateString(), "dd/mm/aaaa")</td>
                <td>@String.Format(item.C_compras_cotizaciones_articulos.fecha_vigencia.Value.ToShortDateString(), "dd/mm/aaaa")</td>
                <td>@string.Format("{0:0.00}", item.C_compras_requi_d.cantidad)</td>
                <td>$@item.C_compras_cotizaciones_articulos.precio_unitario.Value.ToString("N9")</td>
                <td>@item.C_compras_cotizaciones_articulos.porcentaje_descuento %</td>

                <td>@item.C_compras_cotizaciones_articulos.precio_final.Value.ToString("N9")</td>

                <td>@item.C_compras_cotizaciones_articulos.C_tipos_moneda.clave_fiscal</td>
                <td><button class="btn btn_beta_danger" onclick="RemoverArticuloCotizacion(@item.id_cotizacion_requisicion);"><i class="fa fa-remove"></i></button></td>
            </tr>
        }
    </tbody>
</table>
