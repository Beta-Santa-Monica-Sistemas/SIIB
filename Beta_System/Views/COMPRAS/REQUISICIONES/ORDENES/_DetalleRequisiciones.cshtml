    <button class="btn btn_beta_icon" onclick="">Autorizar<i class="fa fa-search"></i></button>
</div>
<div class="col-md-3">
    <button class="btn btn_beta_icon" onclick="">Enviar correo<i class="fa fa-search"></i></button>
</div>
