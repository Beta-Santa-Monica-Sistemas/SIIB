@model Beta_System.Models.TrackingRequisiciones

<style>
    .hh-BackgroundBox {
        /*background-color: #F8F8F8;*/
        margin-bottom: 10px;
        padding: 25px;
        margin-top: 10px;
    }

    .pt45 {
        padding-top: 45px;
    }

    .order-tracking {
        text-align: center;
        width: 14%;
        position: relative;
        display: block;
    }

        .order-tracking .is-complete {
            display: block;
            position: relative;
            border-radius: 50%;
            height: 30px;
            width: 30px;
            border: 0px solid #AFAFAF;
            background-color: #f7be16;
            margin: 0 auto;
            transition: background 0.25s linear;
            -webkit-transition: background 0.25s linear;
            z-index: 2;
        }

            .order-tracking .is-complete:after {
                display: block;
                position: absolute;
                content: '';
                height: 14px;
                width: 7px;
                top: -2px;
                bottom: 0;
                left: 5px;
                margin: auto 0;
                border: 0px solid #AFAFAF;
                border-width: 0px 2px 2px 0;
                transform: rotate(45deg);
                opacity: 0;
            }

        .order-tracking.completed .is-complete {
            border-color: #27aa80;
            border-width: 0px;
            background-color: #27aa80;
        }

            .order-tracking.completed .is-complete:after {
                border-color: #fff;
                border-width: 0px 3px 3px 0;
                width: 7px;
                left: 11px;
                opacity: 1;
            }

        .order-tracking p {
            color: #A4A4A4;
            font-size: 16px;
            margin-top: 8px;
            margin-bottom: 0;
            line-height: 20px;
        }

            .order-tracking p span {
                font-size: 14px;
            }

        .order-tracking.completed p {
            color: #000;
        }

        .order-tracking::before {
            content: '';
            display: block;
            height: 3px;
            width: calc(100% - 40px);
            background-color: #f7be16;
            top: 13px;
            position: absolute;
            left: calc(-50% + 20px);
            z-index: 0;
        }

        .order-tracking:first-child:before {
            display: none;
        }

        .order-tracking.completed:before {
            background-color: #27aa80;
        }
</style>

@if (Model != null)
{
    int id_requi_g = ViewBag.id_requi_g;

    <h2 class="text-center bg-beta">TRACKING</h2>
    <div class="row">
        <div class="col-12 col-md-12 hh-BackgroundBox ">
            <div class="row justify-content-between">
                <div class="order-tracking completed col-md-2">
                    <span class="is-complete"></span>
                    <p>Registro<br><span>@String.Format(Model.fecha_registro.ToString(), "dd/mm/yyyy hh:mm")</span></p>
                </div>

                @if (Model.Firma_1 == true)
                {
                    <div class="order-tracking completed col-md-2">
                        <span class="is-complete"></span>
                        <p>Revisa/Valida necesidad<br><span>@String.Format(Model.fecha_firma_1.ToString(), "dd/mm/yyyy hh:mm")</span></p>
                    </div>
                }
                else
                {
                    <div class="order-tracking">
                        <span class="is-complete"></span>
                        <p>Revisa/Valida necesidad<br><span></span></p>
                    </div>
                }

                @if (Model.cotizaciones.Count() > 0)
                {
                    <div class="order-tracking completed col-md-2">
                        <span class="is-complete"></span>
                        <p>
                            Cotizaciones<br>
                            <div @*class="text-left" style="height:300px; min-height:300px;overflow:auto; overflow-x:hidden;"*@>
                                @foreach (var cotizacion in Model.cotizaciones.Select(x => x.C_compras_requi_d).OrderBy(x => x.C_articulos_catalogo.nombre_articulo).Distinct())
                                {
                                    <span>-@cotizacion.C_articulos_catalogo.nombre_articulo (<strong class="text_beta">@Model.cotizaciones.Where(x => x.id_requisicion_articulo_d == cotizacion.id_requisicion_articulo_d).Distinct().Count()</strong>)</span><br />
                                }
                            </div>

                        </p>
                    </div>
                }
                else
                {
                    <div class="order-tracking col-md-2">
                        <span class="is-complete"></span>
                        <p>Cotizaciones<br><span></span></p>
                    </div>
                }

                @if (Model.confirmaciones.Count() > 0)
                {
                    <div class="order-tracking completed col-md-2">
                        <span class="is-complete"></span>
                        <p>
                            Confirmaciones<br>
                            <div @*class="text-left" style="height:300px; min-height:300px;overflow:auto; overflow-x:hidden;"*@>
                                @foreach (var confirmaciones in Model.confirmaciones.Select(x => x.C_compras_requi_d).OrderBy(x => x.C_articulos_catalogo.nombre_articulo).Distinct())
                                {
                                    <span>-@confirmaciones.C_articulos_catalogo.nombre_articulo</span>
                                    try
                                    {
                                        <br />
                                        <span class="text_beta">(@Model.confirmaciones.Where(x => x.id_requisicion_articulo_d == confirmaciones.id_requisicion_articulo_d).Distinct().Count() @Model.confirmaciones.Where(x => x.id_requisicion_articulo_d == confirmaciones.id_requisicion_articulo_d).FirstOrDefault().C_compras_cotizaciones_articulos.C_unidades_medidas.unidad_medida).</span><br />
                                    }
                                    catch (Exception)
                                    {
                                    }
                                }
                            </div>

                        </p>
                    </div>
                }
                else
                {
                    <div class="order-tracking col-md-2">
                        <span class="is-complete"></span>
                        <p>Confirmaciones<br><span></span></p>
                    </div>
                }

                @if (Model.parcialidades.Count() > 0)
                {
                    <div class="order-tracking completed col-md-2">
                        <span class="is-complete"></span>
                        <p>
                            Parcialidades<br>
                            <div style="text-align:left;">
                                @foreach (var parcialidades in Model.parcialidades)
                                {
                                    var nombre_proveedor = "";
                                    try
                                    {
                                        nombre_proveedor = " (" + parcialidades.C_compras_cotizaciones_confirmadas_d.FirstOrDefault().C_compras_cotizaciones_requisiciones.C_compras_cotizaciones_articulos.C_compras_proveedores.razon_social + ")";
                                    }
                                    catch (Exception) { }

                                    if (parcialidades.id_status_cotizacion_confirmada == 1)
                                    {<span>-@parcialidades.nombre_suborden.ToUpper() <span class="text_beta">@nombre_proveedor</span><i class="fa fa-clock-o" style="color:black;"></i></span><br />} //PENDIENTE
                                else
                                { <span>-@parcialidades.nombre_suborden.ToUpper() <span class="text_beta">@nombre_proveedor</span><i class="fa fa-check" style="color:#46E63E;"></i></span><br />}

                            if (parcialidades.solicita_autorizacion == true && parcialidades.id_status_cotizacion_confirmada == 1)
                            {
                                <div class="text-center"><small class="text-danger" style="margin: 2px;">(En espera de aut. por dirección)</small></div>
                            }
                            if (parcialidades.solicita_autorizacion == true && parcialidades.id_status_cotizacion_confirmada != 1)
                            {
                                <div class="text-center"><small class="text-success" style="margin: 2px;">(Aut. dirección)</small></div>
                            }
                        }
                            </div>
                        </p>
                    </div>
                }
                else
                {
                    <div class="order-tracking col-md-2">
                        <span class="is-complete"></span>
                        <p>Parcialidades<br><span></span></p>
                    </div>
                }

                @if (Model.no_ordenes_compra > 0)
                {
                    <div class="order-tracking completed col-md-2">
                        <span class="is-complete"></span>
                        <p>
                            Ordenes de compra (@Model.no_ordenes_compra) <i class="fa fa-eye text_beta" onclick="ConsultarTrackingOrdenes(@id_requi_g);"></i> <br>
                            @foreach (var orden_compra in Model.ordenes_compra)
                            {
                                <span>-@orden_compra.C_compras_proveedores.razon_social</span><strong class="text_beta ml-1">(@orden_compra.C_compras_ordenes_d.FirstOrDefault().C_tipos_moneda.clave_fiscal)</strong><br />
                            }
                        </p>
                    </div>
                }
                else
                {
                    <div class="order-tracking col-md-2">
                        <span class="is-complete"></span>
                        <p>Ordenes de compra<br><span></span></p>
                    </div>
                }



            </div>
        </div>
    </div>
}
