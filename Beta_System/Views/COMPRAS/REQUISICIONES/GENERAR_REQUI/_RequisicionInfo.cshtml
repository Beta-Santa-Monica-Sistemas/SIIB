@model IEnumerable<Beta_System.Models.C_compras_requi_g>

<table class="table table-striped table-bordered text-center" id="datatable_requisiciones_general">
    <thead>
        <tr class="bg-beta text-center">
            <th>Tipo de requisición</th>
            <th>Fecha</th>
            <th>Centro</th>
            <th>Requisición</th>
            <th>Concepto</th>
            <th>Registrado por</th>
            <th>Estatus</th>
            <th>Mostrar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderByDescending(x=>x.fecha_registro))
        {
            <tr class="text-center">
                <td><strong style="color:@item.C_compras_requisiciones_tipos.color">@item.C_compras_requisiciones_tipos.tipo_requisicion</strong></td>
                <td>@String.Format(item.fecha_registro.Value.ToShortDateString(), "dd/mm/aaaa")</td>
                <td >@item.C_centros_g.siglas</td>
                <td>@item.id_requisicion_articulo_g</td>                
                <td>@item.concepto</td>
                <td>@item.C_usuarios_corporativo5.C_empleados.nombres @item.C_usuarios_corporativo5.C_empleados.apellido_paterno</td>
                <td>
                    <button class="btn btn-xs btn-sm" style="background-color:@item.C_compras_requisiciones_status.color; color:white;">@item.C_compras_requisiciones_status.nombre_status</button>
                </td>
                <td>
                    <button class="btn btn_beta_icon" onclick="ConsultarDetalleRequiGeneral(@item.id_requisicion_articulo_g);"><i class="fa fa-bars"></i></button>
                </td>
            </tr>
        }
    </tbody>
</table>
