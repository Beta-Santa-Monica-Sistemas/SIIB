@model IQueryable<Beta_System.Models.C_compras_requi_g>

@try
{
    if (Model.Count() > 0)
    {
        <table class="table table-striped table-bordered" id="datatable_requis_confirmadas">
            <thead>
                <tr class="bg-beta text-center">
                    <th>Fecha de registro</th>
                    <th>Centro</th>
                    <th>Requisición</th>
                    <th>Concepto</th>
                    <th>Registroó necesidad</th>
                    <th>Agrupar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Distinct())
                {
                    <tr class="text-center">
                        <td>@String.Format(item.fecha_registro.Value.ToShortDateString(), "dd/mm/aaaa")</td>
                        <td>@item.C_centros_g.siglas</td>
                        <td>@item.id_requisicion_articulo_g</td>
                        <td>@item.concepto</td>
                        <td>@item.C_usuarios_corporativo5.C_empleados.nombres @item.C_usuarios_corporativo5.C_empleados.apellido_paterno</td>
                        <td>
                            <button class="btn btn_beta_icon" onclick="ConsultarCotizacionesConfirmadas(@item.id_requisicion_articulo_g);"><i class="fa fa-bars"></i></button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h2 class="text-center text-danger">No hay cotizaciones de artículos confirmadas en este centro</h2>
    }
}
catch (Exception)
{
    <h2 class="text-center text-danger">Ocurrió un error en la consulta</h2>
}