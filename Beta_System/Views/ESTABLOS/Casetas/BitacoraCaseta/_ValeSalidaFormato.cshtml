@model IEnumerable<Beta_System.Models.C_establos_caseta_vales_tipos_salidas>

<div class="container">
    <div class="row">
        <div class="col-md-2 text-center">
            <img src="~/Content/img_layout/logo_beta_new.png" class="img-responsive" />
            <h3 style="margin:5px;"><strong>Fecha: @String.Format(DateTime.Now.ToShortDateString(), "dd/MM/yyyy")</strong></h3>
        </div>
        <div class="col-md-8 text-center">
            <h1 class="mt-4">VALE DE SALIDA</h1>
            <div class="row">
                <div class="col-md-4"></div>
                <div class="col-md-4">
                    <strong>Area:</strong>
                    <select id="id_area_vale" class="form-control">
                        <option value="0">SELECCIONA UN ÁREA</option>
                        @{ Html.RenderAction("ConusltarAreasTiposEntradasCaseta", "CATALOGOS", new { id_establo = ViewBag.id_establo, id_tipo_entrada = 1 }); }  @*TIPO DE ENTRADA DE EMPLEADO*@
                    </select>
                </div>
                <div class="col-md-4">

                </div>
            </div>
        </div>
        <div class="col-md-2 text-center">
            <h2 class="mt-4" style="margin-top:5px;">FOLIO</h2>
            <h1 style="margin:5px;" class="text_beta" id="folio_vale_salida"></h1>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-8">
            <h3><strong>Proveedor</strong></h3>
            <input type="text" placeholder="Ingresa el proveedor" class="form-control" id="proveedor_vale_salida" />

            <h3><strong>ID del activo</strong></h3>
            <input type="text" placeholder="" class="form-control" id="id_activo_vale_salida" />

            <h3><strong>Tipo de activo</strong></h3>
            <input type="text" placeholder="Ingresa el tipo de activo" class="form-control" id="tipo_activo_vale_salida" />

            <h3><strong>Descripción de solicitud:</strong></h3>
            <textarea id="descripcion_vale_salida" class="form-control" rows="6" placeholder="Ingresa una descripción..."></textarea>
            <hr />
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            <div class="row">
                <div class="col-md-1"></div>
                <div class="col-md-5 text-center">
                    <div style="border-bottom:1px solid black; width:100%;"></div>
                    <label style="font-size:22px;">QUIEN SOLICITA</label>
                </div>
                <div class="col-md-5 text-center">
                    <div style="border-bottom:1px solid black; width:100%;"></div>
                    <label style="font-size:22px;">FIRMA AUTORIZADA</label>
                </div>
                <div class="col-md-1"></div>
            </div>

        </div>
        <div class="col-md-4">
            @*<h3><strong>Topo de salida</strong></h3>*@
            <table class="table table-striped table-bordered">
                <thead>
                    <tr class="bg-beta">
                        <td class="text-center">TIPO DE SALIDA</td>
                        <td class="text-center">SELECCIONAR</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.nombre_tipo_salida.ToUpper()</td>
                            <td>
                                <input type="radio" name="tipo_salida_vale_salida" value="@item.id_caseta_tipo_salida" class="form-control" style="height:25px;" onclick="MostrarValorSalida(@item.id_caseta_tipo_salida, '@item.nombre_tipo_salida')" />
                            </td>
                        </tr>
                    }
                    <tr id="tr_valor_tipo_salida" style="display:none;">
                        <td>INGRESA EL TIPO:</td>
                        <td><input type="text" class="form-control" id="nombre_tipo_salida_vale_salida" /></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-5"></div>
    <div class="col-md-2">
        <button onclick="GenerarValeSalida();" class="btn btn_beta">Generar vale de salida <i class="fa fa-check"></i></button>
    </div>
    <div class="col-md-5"></div>
</div>

