@model IEnumerable<Beta_System.Models.C_establos_caseta_vales_salida>

@if (Model.Count() > 0)
{
    <table id="datatable_historial_vales" class="table table-striped table-bordered">
        <thead>
            <tr class="bg-beta text-center">
                <th>Establo</th>
                <th>Folio</th>
                <th>Area</th>
                <th>Descripción</th>
                <th>Usuario registró</th>
                <th>Fecha registro</th>
                <th>Tipo de salida</th>
                <th>Registrado en caseta</th>
                <th>Reimprimir</th>
                @*<th>Detalle</th>*@
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="text-center">
                    <td>@item.C_establos.nombre_establo</td>
                    <td>@item.folio</td>
                    <td>@item.C_establos_caseta_tipos_entradas_areas.C_establos_areas.nombre_area</td>
                    <td>@item.descripcion</td>
                    <td>
                        <strong>@item.C_usuarios_corporativo.usuario</strong>
                        <br />
                        <label>@item.C_usuarios_corporativo.C_empleados.nombres @item.C_usuarios_corporativo.C_empleados.apellido_paterno</label>
                    </td>
                    <td>@string.Format(item.fecha_registro.Value.ToString(), "dd/mm/yyyy HH:mm")</td>
                    <td>@item.C_establos_caseta_vales_tipos_salidas.nombre_tipo_salida</td>
                    @if (item.registrado == true)
                    {
                        <td><strong><i class="fa fa-check text-success"></i></strong></td>
                        <td><strong>Emitido</strong></td>
                    }
                    else
                    {
                        <td><strong><i class="fa fa-remove text-danger"></i></strong></td>
                        <td><button class="btn btn_beta_icon" onclick="ConsultarValeSalidaImpresion(@item.id_caseta_vale);"><i class="fa fa-print"></i></button></td>

                    }


                    @*<td>
                            <button onclick="ConsultarDetalleValeSalida(@item.id_caseta_vale);" class="btn btn_beta_icon"><i class="fa fa-bars"></i></button>
                        </td>*@
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h2 class="text-center text-danger">No se encontraron vales de salida</h2>
}

