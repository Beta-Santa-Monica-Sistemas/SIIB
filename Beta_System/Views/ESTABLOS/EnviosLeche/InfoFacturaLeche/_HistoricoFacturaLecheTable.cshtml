@model Beta_System.Models.HistoricoFacturasLeche

@if (Model.Establo.Count() > 0)
{
    <table class="table table-striped table-bordered text-center" id="datatable_historico_leche">
        <thead>
            <tr class="bg-beta text-center">
                <th>Establo</th>
                <th>Destino</th>
                <th>Fecha</th>
                <th>Folio</th>
                <th>Ficha</th>
                <th>Tanque</th>
                <th>Litros envio</th>
                <th>Lote</th>
                <th>Litros recibido</th>
                <th>P. litro</th>
                <th>P. flete</th>
                <th>Importe</th>
                <th>Registro</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Establo.Count; i++)
            {
                <tr>
                    <td>@Model.Establo[i]</td>
                    <td>@Model.Destino[i]</td>
                    <td>@Model.Fecha[i].ToString("dd/MM/yyyy")</td>
                    <td>@Model.Folio[i]</td>
                    <td>@Model.Ficha[i]</td>
                    <td>@Model.Tanque[i]</td>
                    <td>@Model.Litros_envio[i].ToString("N3")</td>
                    <td>@Model.Lote[i]</td>
                    <td>@Model.Litros_recibido[i].ToString("N3")</td>
                    <td>@Model.Precio_litro[i].ToString("N3")</td>
                    <td>@Model.Precio_flete[i].ToString("N3")</td>
                    <td>@Model.Importe[i].ToString("N3")</td>
                    <td>@Model.Registro[i]</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="col-md-12 text-center">
        <h2 style="color:red">No se encontró información</h2>
    </div>
}