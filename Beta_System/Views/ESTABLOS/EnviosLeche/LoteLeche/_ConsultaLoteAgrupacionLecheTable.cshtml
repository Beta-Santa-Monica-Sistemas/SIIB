@model IEnumerable<Beta_System.Models.C_envios_leche_lote_d>

@if (Model.Count() > 0)
{
    <table class="table table-striped table-bordered" id="tabla_lote_leche" data-toggle="table" data-search="true">
        <thead>
            <tr class="bg-beta text-center">
                <th>#</th>
                <th>Cliente</th>
                <th>Litros</th>
                <th>Estatus</th>
                <th>Confirmacion</th>
                <th>Cancelacion</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var group in Model.GroupBy(x => x.id_envio_leche_lote_g))
            {
                <tr>
                    <td class="text-center">@group.FirstOrDefault().id_envio_leche_lote_g</td>
                    <td>@group.FirstOrDefault().C_envios_leche_confirmacion.C_envios_leche_g.C_envios_leche_clientes.nombre_comercial</td>
                    <td>@group.Sum(x => x.C_envios_leche_confirmacion.C_envios_leche_g.litros_totales).Value.ToString("N3")</td>
                    <td class="text-center" style="background-color:@group.FirstOrDefault().C_envios_leche_lote_g.C_envios_leche_lote_status.color">@group.FirstOrDefault().C_envios_leche_lote_g.C_envios_leche_lote_status.nombre_status</td>
                    <td class="text-center">
                        @if (group.FirstOrDefault().C_envios_leche_lote_g.id_envio_leche_lote_status != 3)
                        {
                            <button class="btn btn_beta_icon" onclick="ConsultaConfirmacionFacturaLote(@group.FirstOrDefault().id_envio_leche_lote_g);"><i class="fa fa-check"></i></button>
                        }
                        else
                        {
                            <button class="btn btn_beta_icon" onclick="MostrarLoteFacturaLeche(@group.FirstOrDefault().id_envio_leche_lote_g);"><i class="fa fa-eye"></i></button>

                        }
                    </td>
                    <td class="text-center">
                        @if (group.FirstOrDefault().C_envios_leche_lote_g.id_envio_leche_lote_status != 3)
                        {
                            <button class="btn btn_beta_danger" style="" onclick="CancelacionLote(@group.FirstOrDefault().id_envio_leche_lote_g);"><i class="fa fa-remove"></i></button>
                        }
                        else
                        {

                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="col-md-12 text-center">
        <h2 style="color:red">No se encontró información</h2>
    </div>
}