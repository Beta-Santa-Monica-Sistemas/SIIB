@model IEnumerable<Beta_System.Models.C_bascula_fichas>

<table class="table table-striped table-bordered" id="reporte_bitacora_table">
    <tr class="text-center bg-beta">
        <th class="headerConcepto">Establo</th>
        <th class="headerConcepto">Ficha</th>
        <th class="headerConcepto">Folio</th>
        <th class="headerConcepto">Articulo</th>
        <th class="headerConcepto">Cliente</th>
        <th class="headerConcepto">Fecha pesada 1</th>
        <th class="headerConcepto">Fecha pesada 2</th>
        <th class="headerConcepto">Linea Transportista</th>
        <th class="headerConcepto">Chofer</th>
        <th class="headerConcepto">Placas</th>
        <th class="headerConcepto">Peso1</th>
        <th class="headerConcepto">Peso2</th>
        <th class="headerConcepto">PesoT</th>
        <th class="headerConcepto">Mat. Seca</th>
        <th class="headerConcepto">Maquilador</th>
        <th class="headerConcepto">Observacion</th>
        <th class="headerConcepto">Movimiento</th>
        <th class="headerConcepto">Tipo Movimiento</th>
        <th class="headerConcepto">Peso Origen</th>
        <th class="headerConcepto">Tabla</th>
        <th class="headerConcepto">Variedad</th>
        <th class="headerConcepto">Ensilador</th>
        <th class="headerConcepto">Corte</th>
        <th class="headerConcepto">Pacas</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr class="text-center">
            <td>@item.C_establos.nombre_establo</td>
            <td>@item.id_bascula_ficha</td>
            <td>@item.folio</td>
            <td>@item.C_articulos_catalogo.nombre_articulo</td>
            @if (item.id_ficha_tipo == 1)
            {
                <td>@item.C_envios_leche_clientes.razon_social</td>
            }
            else
            {
                <td>@item.C_compras_proveedores.razon_social</td>
            }
            <td>@String.Format(item.fecha_registo.Value.ToShortDateString(), "dd/mm/aaaa")</td>
            @if (item.fecha_segunda_pesada != null)
            {
                <td>@String.Format(item.fecha_segunda_pesada.Value.ToShortDateString(), "dd/mm/aaaa")</td>
            }
            else
            {
                <td style="color:red">PENDIENTE</td>
            }
            <td>@item.C_bascula_lineas_transportistas.nombre_linea</td>
            <td>@item.chofer</td>
            <td>@item.placas</td>
            <td>@item.peso_1</td>
            @if (item.peso_2 != null)
            {
                <td>@item.peso_2</td>
            }
            else
            {
                <td style="color:red">PENDIENTE</td>
            }
            @if (item.peso_t != null)
            {
                <td>@item.peso_t</td>
            }
            else
            {
                <td style="color:red">PENDIENTE</td>
            }
            <td>@item.peso_materia_seca</td>
            <td>@item.maquilador</td>
            <td>@item.observaciones</td>
            <td>@item.C_bascula_codigos_movimientos.descripcion</td>
            <td>@item.C_bascula_tipos_movimientos.nombre_movimiento</td>
            <td>@item.peso_origen</td>
            <td>@item.tabla</td>
            <td>@item.variedad</td>
            <td>@item.ensilador</td>
            <td>@item.corte</td>
            <td>@item.pacas</td>
        </tr>
    }
</table>