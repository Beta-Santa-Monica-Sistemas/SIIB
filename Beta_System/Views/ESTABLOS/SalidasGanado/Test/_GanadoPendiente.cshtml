@model IEnumerable<Beta_System.Models.C_salida_ganado_d>
@if (Model.Count() > 0)
{
    <table class="table table-striped table-bordered" id="tabla_ganado_pendiente">
        <thead>
            <tr class="bg-beta text-center">
                <th>Folio</th>
                <th># Arete</th>
                <th>Clasificación</th>
                <th>Causa de la baja</th>
                <th>Causa de la muerte</th>
                <th>Condición</th>
                <th>Sala</th>
                <th>Edad</th>
                <th>Cantidad</th>
                <th>Foto</th>
                <th>Asignar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var info in Model.GroupBy(x => x.folio))
            {
                <tr>
                    <td class="text-center">@info.FirstOrDefault().folio</td>
                    <td class="text-center">
                        @foreach (var item in info)
                        {
                            <label>@item.arete</label><br />
                        }
                    </td>
                    <td>
                        @foreach (var item in info)
                        {
                            <label>@item.clasifica</label><br />
                        }

                    </td>
                    <td>
                        @foreach (var item in info)
                        {
                            <label>@item.C_salida_ganado_causas_muerte.C_salida_ganado_causas_muerte_tipos.tipo_muerte</label><br />
                        }

                    </td>
                    <td>
                        @foreach (var item in info)
                        {
                            <label>@item.C_salida_ganado_causas_muerte.causa_muerte</label><br />
                        }

                    </td>
                    <td>
                        @foreach (var item in info)
                        {
                            <label> @item.cond_ind</label><br />
                        }

                    </td>
                    <td>
                        @foreach (var item in info)
                        {
                            <label> @item.sala</label><br />
                        }

                    </td>
                    <td>
                        @foreach (var item in info)
                        {
                            <label>@item.edad</label><br />
                        }

                    </td>
                    <td>
                        @foreach (var item in info)
                        {
                            <label>@item.cantidad</label><br />
                        }
                    </td>
                    <td class="text-center">
                        @foreach (var item in info)
                        {
                            <div class="mb-2">
                                @if (item.path != null || item.path_2 != null)
                                {
                                    <div class="d-flex justify-content-center gap-2">
                                        @if (item.path != null)
                                        {
                                            <a class="btn btn_beta_icon" href="@item.path" target="_blank"><i class="fa fa-eye"></i></a>
                                        }
                                        @if (item.path_2 != null)
                                        {
                                            <a class="btn btn_beta_icon" href="@item.path_2" target="_blank"><i class="fa fa-eye"></i></a>
                                        }
                                    </div>
                                }
                            </div>
                        }
                    </td>

                    <td class="text-center">
                        <button class="btn btn_beta_icon" onclick="AsignarFolioGanadoPendiente('@info.FirstOrDefault().folio');"><i class="fa fa-plus"></i></button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h3 class="text-center" style="color:red">NO SE ENCONTRO INFORMACION</h3>
}