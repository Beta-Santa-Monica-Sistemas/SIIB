@model List<Beta_System.Models.TransitoArticulo>
@{
    var modo = ViewBag.transitomodo;
}
@if (Model.Count() > 0)
{
    if (modo == 1)
    {
        <table class="table table-striped table-bordered w-100" id="tabla_articulos_transito" width="100%">
            <thead>
                <tr class="bg-beta">
                    <th colspan="11"><h2 style="color:white"><strong>@Model.FirstOrDefault().clave - @Model.FirstOrDefault().articulo</strong></h2></th>
                </tr>
                <tr class="bg-beta text-center">
                    <th>Requisición</th>
                    <th>Centro</th>
                    <th>Registrado por</th>
                    <th>Fecha</th>
                    <th>Cargo</th>
                    <th>Cuenta</th>
                    <th>Cotización</th>
                    <th>Confirmación</th>
                    <th>Parcialidad</th>
                    <th>P. recepcionar</th>
                    <th>Mostrar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td><strong>@item.requisicion</strong></td>
                        <td>@item.centro</td>
                        <td>@item.registrado</td>
                        <td>@String.Format(item.fecha.ToShortDateString(), "dd/mm/aaaa")</td>
                        <td>@item.cargo</td>
                        <td>@item.cuenta</td>
                        <td><strong>@item.cotizacion</strong></td>
                        <td><strong>@item.confirmacion</strong></td>
                        <td><strong>@item.parcialidad</strong></td>
                        <td><strong>@item.precepcion</strong></td>
                        <td>
                            <button class="btn btn_beta_icon" onclick="ConsultarDetalleRequiGeneral(@item.requisicion);"><i class="fa fa-bars"></i></button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else if (modo == 2)
    {
        <table class="table table-striped table-bordered w-100" id="tabla_articulos_transito" width="100%">
            <thead>
                <tr class="bg-beta">
                    <th colspan="12"><h2 style="color:white"><strong>@Model.FirstOrDefault().familia</strong></h2></th>
                </tr>
                <tr class="bg-beta text-center">
                    <th>Requisición</th>
                    <th>Centro</th>
                    <th>Articulo</th>
                    <th>Registrado por</th>
                    <th>Fecha</th>
                    <th>Cargo</th>
                    <th>Cuenta</th>
                    <th>Cotización</th>
                    <th>Confirmación</th>
                    <th>Parcialidad</th>
                    <th>P. recepcionar</th>
                    <th>Mostrar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td>@item.requisicion</td>
                        <td>@item.centro</td>
                        <td>@item.clave - @item.articulo</td>
                        <td>@item.registrado</td>
                        <td>@String.Format(item.fecha.ToShortDateString(), "dd/mm/aaaa")</td>
                        <td>@item.cargo</td>
                        <td>@item.cuenta</td>
                        <td>@item.cotizacion</td>
                        <td>@item.confirmacion</td>
                        <td>@item.parcialidad</td>
                        <td>@item.precepcion</td>
                        <td>
                            <button class="btn btn_beta_icon" onclick="ConsultarDetalleRequiGeneral(@item.requisicion);"><i class="fa fa-bars"></i></button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
}
else
{
    <div class="col-md-12"><hr /></div>
    <div class="col-md-12 text-center">
        <h2 style="color:red">No se encontró información, favor de intentarlo mas tarde</h2>
    </div>
}