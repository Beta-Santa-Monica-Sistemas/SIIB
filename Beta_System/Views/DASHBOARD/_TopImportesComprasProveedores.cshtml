@model List<Beta_System.Models.GraficasReportePie>



@if (Model.Count() > 0)
{

    <main>
        <div class="header">
            <h1>Ranking mensual</h1>
            <i class="fa fa-2x fa-star"></i>
        </div>
        <div id="leaderboard">
            <div class="ribbon"></div>
            <table>

                @for (int i = 0; i < Model.Count(); i++)
                {
                    if (i == 0)
                    {
                        <tr class="text-white">
                            <td class="number td_dashboard">1</td>
                            <td class="name td_dashboard">@Model[i].Nombre</td>
                            <td class="points td_dashboard">
                                $@Model[i].Valor.ToString("N2")
                            </td>
                        </tr>
                    }
                    else
                    {
                        <tr class="tr_dashboard">
                            <td class="number td_dashboard">@(i + 1)</td>
                            <td class="name td_dashboard">@Model[i].Nombre</td>
                            <td class="points td_dashboard">$@Model[i].Valor.ToString("N2")</td>
                        </tr>
                    }
                }
            </table>
        </div>
    </main>
}