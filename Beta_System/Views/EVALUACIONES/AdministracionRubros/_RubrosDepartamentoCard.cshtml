@model List<Beta_System.Models.C_evaluaciones_rubros>

@if (Model.Count() > 0)
{
    List<Beta_System.Models.C_evaluaciones_departamentos_rubros> rubros_depa = Session["rubros_departamentos_evaluaciones"] as List<Beta_System.Models.C_evaluaciones_departamentos_rubros>;


    <table class="table table-striped table-bordered">
        <thead>
            <tr class="bg-beta text-center">
                <th>Seleccionar</th>
                <th>Rubro</th>
                <th>Porcentaje</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="text-center">
                    <td>
                        @if (rubros_depa.Select(x => x.id_evaluacion_rubro).Contains(item.id_evaluacion_rubro))
                        {
                            <input type="checkbox" value="@item.id_evaluacion_rubro" class="id_rubro_depa form-control" onclick="CalcularTotalRubrosDepartamentos();" name="@item.porcentaje" style="height:20px;" checked />
                        }
                        else
                        {
                            <input type="checkbox" value="@item.id_evaluacion_rubro" class="id_rubro_depa form-control" onclick="CalcularTotalRubrosDepartamentos();" name="@item.porcentaje" style="height:20px;"/>
                        }
                    </td>
                    <td>@item.nombre_rubro</td>
                    <td>@Convert.ToInt32(item.porcentaje) %</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h3 class="text-center text-danger"></h3>
}

