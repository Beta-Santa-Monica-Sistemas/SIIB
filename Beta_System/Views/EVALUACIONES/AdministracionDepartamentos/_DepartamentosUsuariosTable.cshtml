@model List<Beta_System.Models.C_evaluaciones_departamentos_usuarios>

@if (Model.Count() > 0)
{
    <table class="table table-sm table-condensed small table-bordered table-striped" id="datatable_departamentos_usuario">
        <tr class="bg-beta text-center">
            <th>Usuario</th>
            <th>Nombre</th>
            <th>Rol</th>
            <th>Eliminar asociación</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr class="text-center">
                <td>@item.C_usuarios_corporativo.usuario</td>
                <td>@item.C_usuarios_corporativo.C_empleados.nombres @item.C_usuarios_corporativo.C_empleados.apellido_paterno @item.C_usuarios_corporativo.C_empleados.apellido_materno</td>
                <td>@item.C_usuarios_corporativo.C_usuarios_roles.nombre_rol</td>
                <td>
                    <button class="btn btn_beta_danger" onclick="EliminarLigaUsuarioDepartamento(@item.id_evaluacion_departamento_usuario, @item.id_evaluacion_departamento);"><i class="fa fa-remove"></i></button>
                </td>
            </tr>
        }
    </table>
}
else
{
    <h3 class="text-center text-danger">No hay registros</h3>
}
