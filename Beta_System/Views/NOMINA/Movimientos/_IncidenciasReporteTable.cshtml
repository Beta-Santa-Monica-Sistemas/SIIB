@model IEnumerable<Beta_System.Models.C_nomina_incidencias>
@if (Model.Count() > 0)
{
    <table class="table table-striped table-bordered" id="tabla_incidencias_reporte" data-toggle="table" data-search="true">
       <thead>
           <tr class="bg-beta text-center">
               <th>Fecha de registro</th>
               <th>Empleado (No.)</th>
               <th>Nombre del empleado</th>
               <th>Tipo de incidencia</th>
               <th>Registro patronal</th>
               <th>Mostrar</th>
           </tr>
       </thead>
        <tbody>
            @foreach (var item in Model.OrderBy(x => x.Fecha))
            {
                <tr class="text-center">
                    <td>@String.Format(@item.Fecha.Value.ToShortDateString(), "dd/mm/aaaa")</td>
                    <td>@item.Empleado_id</td>
                    <td>@item.C_nomina_empleados.Nombre_completo</td>
                    <td style="background-color:@item.C_nomina_incidencias_tipos.color; color:white"><b style="font-size:14px">@item.C_nomina_incidencias_tipos.nombre_tipo_incidencia</b></td>
                    <td>@item.C_nomina_regimen_patronal.numero_regimen_partonal</td>
                    <td class="text-center">
                        <button class="btn btn_beta_icon" onclick="MostrarInfoIncidencia(@item.id_incidencia_nomina);"><i class="fa fa-bars"></i></button>
                    </td>
                </tr>
            }
        </tbody>
        
    </table>
}
else
{
    <div class="col-md-12 text-center">
        <h2><strong style="color:red">No se encontró información.<br /> Por favor, cambie el rango de búsqueda.</strong></h2>
    </div>
}