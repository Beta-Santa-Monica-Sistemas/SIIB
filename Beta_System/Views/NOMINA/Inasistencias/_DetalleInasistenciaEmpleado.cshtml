@model IEnumerable<Beta_System.Models.C_nomina_inasistencias>
@{
    DateTime fecha1 = Convert.ToDateTime(ViewBag.fd1);
    DateTime fecha2 = Convert.ToDateTime(ViewBag.fd2);
    var empleado = Model.FirstOrDefault();
}
@if (empleado != null)
{
    <div class="col-md-12" style="display:none">
        <label id="detalle_empleado_inasistencia">@empleado.Empleado_id</label>
    </div>
    <div class="col-md-12 text-center">
        <h1>@empleado.C_nomina_empleados.Nombres @empleado.C_nomina_empleados.Apellido_paterno @empleado.C_nomina_empleados.Apellido_materno</h1>
        <h3>Faltas del dia @fecha1.ToShortDateString(); al @fecha2.ToShortDateString();</h3>
    </div>
    <table class="table table-striped table-bordered" id="tabla_inasistencia_empleado_detalle" data-toggle="table" data-search="true">
        <thead>
            <tr class="bg-beta text-center">
                <th>Fecha falta</th>
                <th>Usuario registró</th>
                <th>Observaciónes</th>
                <th>Eliminar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderBy(x => x.C_nomina_empleados.Nombre_completo))
            {
                <tr class="text-center">
                    <td class="dias_inasistencia_asignados">@String.Format(@item.fecha_inasistencia.Value.ToShortDateString(), "dd/mm/aaaa")</td>
                    <td>@item.C_usuarios_corporativo.C_empleados.nombres @item.C_usuarios_corporativo.C_empleados.apellido_paterno @item.C_usuarios_corporativo.C_empleados.apellido_materno</td>
                    <td>@item.observaciones</td>
                    <td class="text-center">
                        <button class="btn btn_beta_icon btn_beta_danger" onclick="EliminarInasistencia(@item.id_nomina_inasistencia);"><i class="fa fa-remove"></i></button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="col-md-12">
        <h2>No se encontrò los dias faltados por el empleado</h2>
    </div>
}