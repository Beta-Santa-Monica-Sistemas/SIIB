@model IEnumerable<Beta_System.Models.C_nomina_beta_d_areas_empleados>

@{ int modo = ViewBag.modo;
    var nomina_g = Model.FirstOrDefault();
}

<table class="table table-striped table-bordered" id="datatable_@Model.FirstOrDefault().id_nomina_d_area">
    <thead>
        <tr class="bg-beta">
            <th>Clave</th>
            <th>Empleado</th>
            <th>Puesto</th>
            <th>Salario diario</th>
            <th>Cuenta bancaria</th>
            <th>NSS</th>
            <th>Importe</th>
            @if (modo == 1)
            {
                <th>Revisar</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var detalle in Model)
        {
            <tr>
                <td>@detalle.C_nomina_empleados.Numero</td>
                <td>@detalle.C_nomina_empleados.Nombres @detalle.C_nomina_empleados.Apellido_paterno @detalle.C_nomina_empleados.Apellido_materno</td>
                <td>@detalle.C_nomina_puestos.nombre_puesto</td>
                <td><strong>$@detalle.salario_diario.Value.ToString("#,##0.00")</strong></td>
                <td>@detalle.cuenta_bancaria</td>
                <td>@detalle.nss</td>
                <td><strong>$@detalle.importe_final.Value.ToString("#,##0.00")</strong></td>
                @if (modo == 1)
                {
                    <td>
                        <button class="btn btn_beta_icon" onclick="ConsultarConceptosEmpleadoNomina(@detalle.id_nomina_d_area_empleado, @nomina_g.id_nomina_g);"><i class="fa fa-bars"></i></button>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
