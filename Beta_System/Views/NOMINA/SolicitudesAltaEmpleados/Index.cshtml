
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MainLayout.cshtml";
    List<int> permisos = Session["PermisosModulo"] as List<int>;
}


<div class="page_title">
    <div class="counter_section">
        <h1>Solicitudes de alta de empleados</h1>
        <div class="row">
            <div class="col-md-12">
                <ul class="nav nav-tabs">
                    @if (permisos.Contains(4034))
                    {
                        <li class="active"> <a data-toggle="tab" href="#valida_solicitud_tab">VALIDAR SOLICITUDES <i class="fa fa-2x fa-list ml-2"></i></a> </li>
                    }
                    @if (permisos.Contains(4035))
                    {
                        <li> <a data-toggle="tab" href="#autoriza_solicitud_tab">AUTORIZAR SOLICITUDES<i class="fa fa-2x fa-check ml-2"></i></a></li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="row column2 counter_section">
    <div class="tab-content">
        @if (permisos.Contains(4034))
        {
            <div id="valida_solicitud_tab" class="tab-pane fade in active show">
                <h3 class="text-center">SOLICITUDES POR VALIDAR</h3>
                <div class="col-md-12 text-right">
                    <button class="btn btn_beta" onclick="ConsultarSoliciudesRevision(1);">Consultar solicitudes</button>
                </div>
                <div class="table-responsive" id="div_solicitudes_validar">

                </div>
            </div>
        }

        @if (permisos.Contains(4035))
        {
            <div id="autoriza_solicitud_tab" class="tab-pane">
                <h3 class="text-center">SOLICITUDES POR AUTORIZAR</h3>
                <div class="col-md-12 text-right">
                    <button class="btn btn_beta" onclick="ConsultarSoliciudesRevision(2);">Consultar solicitudes</button>
                </div>
                <div class="table-responsive" id="div_solicitudes_autorizar">
                </div>
            </div>
        }

    </div>
</div>



<!-- Modal VER SOLICITUD-->
<div class="modal fade" id="m_ver_soliitud" tabindex="-1" role="dialog" aria-labelledby="m_ver_soliitudLabel" aria-hidden="true">
    <div class="modal-dialog" role="document" style="min-width: 80%; width:80%;">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="m_ver_soliitudLabel">SOLCIITUD DE ALTA DE EMPLEADO</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @{ Html.RenderAction("ConsultarFormatoSolicitud", "NOMINA"); }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn_beta_warning" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>



@Scripts.Render("~/bundles_Nomina/js")
@Scripts.Render("~/bundles_Propiedades/js")
<script>
    $(window).on("load", function () {
        ConsultarSoliciudesRevision(1);
        ConsultarSoliciudesRevision(2);
        CaracteresControl();
    });

</script>