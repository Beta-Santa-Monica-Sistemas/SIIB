@model IEnumerable<Beta_System.Models.C_contabilidad_importacion_facturas_d>

@{
    decimal importe = 0;
}


@if (Model.Count() > 0)
{

    <div class="row">
        <div class="col-md-6">
            <h4 style="margin:3px;"><strong>@Model.FirstOrDefault().C_cuentas_contables_g.C_cargos_contables_g.nombre_cargo</strong></h4>
            <h4 style="margin:3px;"><label>@Model.FirstOrDefault().C_cuentas_contables_g.cuenta      @Model.FirstOrDefault().C_cuentas_contables_g.nombre_cuenta</label></h4>
        </div>
        <div class="col-md-6 text-right">
            <h4><strong>Importe compras directas: $ @Model.Select(x => x.C_compras_facturas_proveedores.subtotal).Sum().Value.ToString("N2")</strong></h4>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-bordered" id="datatable_compras_directas_detalle">
            <thead>
                <tr class="bg-beta text-center">
                    <th>Fecha</th>
                    <th>Orden</th>
                    <th>Centro</th>
                    <th>Requisición</th>
                    <th>Proveedor</th>
                    <th style="width:40%;">Concepto</th>
                    <th>Importe $</th>
                    <th>Moneda</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td>@string.Format(item.C_compras_facturas_proveedores.fecha_registro.Value.ToShortDateString(), "dd/mm/yyyy")</td>
                        <td>@item.C_compras_facturas_proveedores.id_compras_orden_g</td>
                        <td>@item.C_compras_facturas_proveedores.C_compras_ordenes_g.C_centros_g.siglas</td>
                        <td>@item.C_compras_facturas_proveedores.C_compras_ordenes_g.id_requisicion_articulo_g</td>
                        <td>@item.C_compras_facturas_proveedores.C_compras_ordenes_g.C_compras_proveedores.razon_social</td>
                        <td>@item.concepto</td>
                        <td>$@item.C_compras_facturas_proveedores.subtotal.Value.ToString("N2")</td>
                        <td>@item.C_tipos_moneda.clave_fiscal</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}




