@model IEnumerable<Beta_System.Models.ReportePolizasAlmacenCuentasContablesDetalle>
@if (Model != null)
{
    <table class="table table-striped table-bordered table-sm table-hover" id="tabla_poliza_detalle" style="width:100%;">
        <thead>
            <tr class="bg-beta text-center">
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var group in Model.GroupBy(x => x.Id_cargo_contable))
            {
                <tr class="bg-beta">
                    <td>@group.First().Cargo_Contable</td>
                    <th></th>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
                <tr class="bg-beta text-center">
                    <td>Almacén</td>
                    <td>Mov</td>
                    <td>Folio</td>
                    <td>Fecha</td>
                    <td>Clave</td>
                    <td>Articulo</td>
                    <td>U.Medida</td>
                    <td>Cantidad</td>
                    <td>Precio</td>
                    <td>Importe</td>
                    <td style="min-width:600px;">Cuenta</td>
                    <td>Movimiento</td>
                    <td>Requisicion</td>
                    <td>Remision</td>
                    <td>Proveedor</td>
                    <td>Registró</td>
                    <td>Equipo</td>
                    <td>Departamento</td>
                </tr>
                foreach (var item in group)
                {
                    <tr class="text-center">
                        <td>@item.Almacen</td>
                        <td>@item.Mov</td>
                        <td>@item.Folio</td>
                        <td>@item.Fecha</td>
                        <td>@item.Clave</td>
                        <td class="text-left">@item.Articulo</td>
                        <td>@item.Medida</td>
                        <td>@item.Cantidad</td>
                        <td>@item.Precio.ToString("C2", System.Globalization.CultureInfo.GetCultureInfo("es-MX"))</td>
                        <td>@item.Importe.ToString("C2", System.Globalization.CultureInfo.GetCultureInfo("es-MX"))</td>
                        <td class="text-left">@item.Cuenta @item.Cuenta_Contable @item.Cargo_Contable</td>
                        <td>@item.Movimiento</td>
                        <td>@item.Requisicion</td>
                        <td>@item.Remision</td>
                        <td class="text-left">@item.Proveedor</td>
                        <td>@item.Trabajador</td>
                        <td>@item.Equipo</td>
                        <td>@item.Departamento</td>
                    </tr>
                }
            }
        </tbody>
    </table>
}
else
{
    <div class="col-md-12 text-center">
        <h1 style="color:red">NO SE ENCONTRÓ INFORMACIÓN</h1>
        <h2 style="color:red">Favor de intentarlo más tarde</h2>
    </div>
}
