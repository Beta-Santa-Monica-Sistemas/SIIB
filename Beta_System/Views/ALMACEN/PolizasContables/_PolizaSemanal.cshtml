@model IEnumerable<Beta_System.Models.ReportePolizasAlmacenCuentasContables>

@if (Model != null)
{
    <table class="table table-striped table-bordered" id="tabla_poliza" data-toggle="table" data-search="true">
        <thead>
            <tr class="bg-beta text-center">
                <th>Cuenta</th>
                <th>Cuenta contable</th>
                <th>Cargo contable</th>
                <th>Entrada</th>
                <th>Salida</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderBy(x => x.Cuenta))
            {
                <tr class="text-center">
                    <td>@item.Cuenta</td>
                    <td class="text-left">@item.CuentaContable</td>
                    <td class="text-left">@item.CargoContable</td>
                    <td>@item.Importe_entrada.ToString("N2")</td>
                    <td>@item.Importe_salida.ToString("N2")</td>
                    <td>@item.Importe_total.ToString("N2")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h2 class="text-center text-danger">No se encontraron registros</h2>
}