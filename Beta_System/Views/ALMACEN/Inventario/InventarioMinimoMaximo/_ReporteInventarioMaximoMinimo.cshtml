@model IEnumerable<Beta_System.Models.CapturaInventarioDiferencias>
@{ 
    var fecha = ViewBag.fechacaptura;
}

@if (Model != null)
{
    <div class="col-md-12">
        <h2>Fecha de registro @fecha</h2>
    </div>
    <table class="table table-striped table-bordered text-center " id="datatable_inv_maximo_minimo">
        <thead>
            <tr class="bg-beta">
                <th>Clave</th>
                <th>Artículo</th>
                <th>Unidad medida</th>
                <th>Sistema</th>
                <th>Cant. Minima</th>
                <th>Cant. Maxima</th>
                <th>Cant. Promedio</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><strong>@item.Clave</strong></td>
                    <td><strong>@item.Nombre_articulo</strong></td>
                    <td>@item.Unidad_medida</td>
                    <td style="background-color:@item.Color; color:black;"><strong>@string.Format("{0:0.00}", item.Cantidad_sistema)</strong></td>
                    <td><strong>@string.Format("{0:0.00}", item.Minimo)</strong></td>
                    <td><strong>@string.Format("{0:0.00}", item.Maximo)</strong></td>
                    <td><strong>@string.Format("{0:0.00}", item.Promedio)</strong></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h2 class="text-center">¡ES NECESARIO CAPTURAR EL INVENTARIO FISICO DE LOS ARTICULOS!</h2>
    <br />
}

