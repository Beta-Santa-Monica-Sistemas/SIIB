@model IEnumerable<Beta_System.Models.C_inventario_almacen_captura_g>


<table id="tabla_inventarios_capturados" class="table table-striped table-bordered" style="width:100%;">
    <thead>
        <tr class="bg-beta text-center">
            <th>Folio inv.</th>
            <th>Almacén</th>
            <th>Fecha de registro</th>
            <th>Capturado por</th>
            <th>Tipo de artículos</th>
            <th>Estatus</th>
            <th>Ver</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var empleado = item.C_usuarios_corporativo.C_empleados;
            <tr class="text-center">
                <td>#@item.id_inventario_g</td>
                <td>@item.C_almacen_almacenes_g.nombre_almacen</td>
                <td>@String.Format(item.fecha_registro.Value.ToShortDateString(), "dd/mm/aaaa")</td>
                <td>@item.C_usuarios_corporativo.usuario | @empleado.nombres @empleado.apellido_materno @empleado.apellido_paterno</td>
                <td>@item.C_articulos_tipos.nombre_tipo</td>

                <td><button class="btn" style="background-color:@item.C_inventario_status.color; color:white;">@item.C_inventario_status.nombre_status</button></td>
                <td><button class="btn btn_beta_icon" onclick="ConsultarDetalleCapturaInventario(@item.id_inventario_g);"><i class="fa fa-bars"></i></button></td>

            </tr>
        }
    </tbody>
</table>