@model List<Beta_System.Models.C_inventario_almacen_ajustes_d>

@if (Model.Count() > 0)
{
    var ajuste_g = Model.FirstOrDefault().C_inventario_almacen_ajustes_g;

    <div class="row">
        <div class="col-md-6">
            <h2 class="text-center">AJUSTE DE INVENTARIO</h2>
        </div>
        <div class="col-md-6 text-left">
            <div class="row">
                <div class="col-md-2">
                    <h3 style="margin: 2px;">Folio: <span class="text_beta">#@ajuste_g.id_inventario_ajuste_g</span></h3>
                </div>
                <div class="col-md-5">
                    <h3 style="margin: 2px;">Almacen: <span class="text_beta">@ajuste_g.C_almacen_almacenes_g.nombre_almacen</span></h3>
                </div>
                <div class="col-md-5">
                    <h3 style="margin: 2px;">Fecha registro: <span class="text_beta">@string.Format(ajuste_g.fecha_registro.Value.ToShortDateString(), "dd/MM/yyyy")</span></h3>
                </div>
            </div>
        </div>
        
    </div>
    <hr />
    <div class="row">
        <div class="col-md-6 text-center">
            <h3 class="bg-green p-1" style="margin:0px;">ENTRADAS</h3>
            <div class="table-responsive" style="overflow:auto; overflow-x:hidden; height:400px; min-height:400px;">
                <table class="table table-striped table-bordered small">
                    <thead>
                        <tr class="bg-beta text-center">
                            <th>Clave</th>
                            <th>Articulo</th>
                            <th>Tipo</th>
                            <th>Unidad medida</th>
                            <th>Existencia original</th>
                            <th>Existencia fisica</th>
                            <th>Ajuste</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var entrada in Model.Where(x => x.C_inventario_almacen_mov_d.entrada_salida == true))
                        {
                            <tr class="text-center">
                                <td>@entrada.C_articulos_catalogo.clave</td>
                                <td class="text-left">@entrada.C_articulos_catalogo.nombre_articulo</td>
                                <td>@entrada.C_articulos_catalogo.C_articulos_tipos.nombre_tipo</td>
                                <td>@entrada.C_articulos_catalogo.C_unidades_medidas.unidad_medida</td>
                                <td>@entrada.existencia_sistema.Value.ToString("N2")</td>
                                <td>@entrada.existencia_fisica.Value.ToString("N2")</td>
                                <td>@entrada.ajuste.Value.ToString("N2")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-md-6 text-center">
            <h3 class="bg-danger p-1 text-white" style="margin:0px;">SALIDAS</h3>
            <div class="table-responsive" style="overflow:auto; overflow-x:hidden; height:500px; min-height:500px;">
                <table class="table table-striped table-bordered small">
                    <thead>
                        <tr class="bg-beta text-center">
                            <th>Clave</th>
                            <th>Articulo</th>
                            <th>Tipo</th>
                            <th>Unidad medida</th>
                            <th>Existencia original</th>
                            <th>Existencia fisica</th>
                            <th>Ajuste</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var salida in Model.Where(x => x.C_inventario_almacen_mov_d.entrada_salida == false))
                        {
                            <tr class="text-center">
                                <td>@salida.C_articulos_catalogo.clave</td>
                                <td class="text-left">@salida.C_articulos_catalogo.nombre_articulo</td>
                                <td>@salida.C_articulos_catalogo.C_articulos_tipos.nombre_tipo</td>
                                <td>@salida.C_articulos_catalogo.C_unidades_medidas.unidad_medida</td>
                                <td>@salida.existencia_sistema.Value.ToString("N2")</td>
                                <td>@salida.existencia_fisica.Value.ToString("N2")</td>
                                <td>@salida.ajuste.Value.ToString("N2")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

}
 else{
    
}