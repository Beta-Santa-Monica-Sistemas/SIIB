@model List<Beta_System.Models.C_inventario_almacen_ajustes_g>

@if (Model.Count() > 0)
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr class="text-center bg-beta">
                <th>Folio</th>
                <th>Fecha registro</th>
                <th>Usuaio registra</th>
                <th>Almacen</th>
                <th>Cant. Articulos</th>
                <th>Imprimir</th>
                <th>Ver</th>
                <th>Cancelar ajuste</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="text-center">
                    <td>@item.id_inventario_ajuste_g</td>
                    <td>@string.Format(item.fecha_registro.Value.ToShortDateString(), "dd/MM/yyyyy")</td>
                    <td>@item.C_usuarios_corporativo.C_empleados.nombres @item.C_usuarios_corporativo.C_empleados.apellido_paterno</td>
                    <td>@item.C_almacen_almacenes_g.nombre_almacen</td>
                    <td class="porcentaje">@item.C_inventario_almacen_ajustes_d.Where(x => x.activo == true).Count()</td>
                    <td>
                        <button class="btn btn_beta_icon" onclick="ImprimirAjusteInventario(@item.id_inventario_ajuste_g);"><i class="fa fa-print"></i></button>
                    </td>
                    <td>
                        <button class="btn btn_beta_icon" onclick="ConsultarAjusteInventarioDetalle(@item.id_inventario_ajuste_g);"><i class="fa fa-bars"></i></button>
                    </td>
                    <td>
                        <button class="btn btn_beta_danger" onclick="EliminarAjusteInventario(@item.id_inventario_ajuste_g);"><i class="fa fa-remove"></i></button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h3 class="text-center text-danger">NO SE ENCONTRARON REGISTROS</h3>
}