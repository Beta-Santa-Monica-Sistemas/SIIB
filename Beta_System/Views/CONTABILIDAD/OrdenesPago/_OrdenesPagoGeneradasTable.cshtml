@model List<Beta_System.Models.C_contabilidad_ordenes_pago_g> 

@if (Model.Count() > 0)
{
    <table class="table table-striped table-bordered" id="datatable_ordenes_pago">
        <thead>
            <tr class="text-center bg-beta">
                <th>Folio</th>
                <th>Nombre del la orden</th>
                <th>Sucursal origen</th>
                <th>Número de cuenta</th>
                <th>Fecha aplicación</th>
                <th>Usuario registró</th>
                <th>Generar TXT</th>
                <th>Mostrar</th>
                <th>Editar</th>
                <th>Eliminar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="text-center">
                    <td>@item.id_contabilidad_orden_pago_g</td>
                    <td>@item.nombre_orden_pago</td>
                    <td>@item.numero_sucursal</td>
                    <td>@item.numero_cuenta</td>
                    <td>@string.Format(item.fecha_aplicacion.Value.ToShortDateString(), "dd/MM/yyyy")</td>
                    <td>@item.C_usuarios_corporativo.usuario</td>
                    <td>
                        <button class="btn btn_beta_icon" onclick="GenerarTXTOrdenPago(@item.id_contabilidad_orden_pago_g);"><i class="fa fa-file-text"></i></button>
                    </td>
                    <td>
                        <button class="btn btn_beta_icon" onclick="ConsultarOrdenPago(@item.id_contabilidad_orden_pago_g);"><i class="fa fa-bars"></i></button>
                    </td>
                    <td>
                        <button class="btn btn_beta_icon"><i class="fa fa-edit"></i></button>
                    </td>
                    <td>
                        <button class="btn btn_beta_danger"><i class="fa fa-remove"></i></button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h3 class="text-center text-danger">No se encontraron registros</h3>
}

