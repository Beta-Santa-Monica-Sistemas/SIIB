@model List<Beta_System.Models.C_contabilidad_ordenes_pago_d>

@if (Model.Count() > 0)
{
    var orden_g = Model.FirstOrDefault().C_contabilidad_ordenes_pago_g;

    <div class="row">
        <div class="col-md-5">
            <h3 style="margin:2px;">Folio: <strong class="text_beta">@orden_g.id_contabilidad_orden_pago_g</strong></h3>
            <h4 style="margin:2px;">Nombre orden: <strong class="text_beta">@orden_g.nombre_orden_pago</strong></h4>
        </div>
        <div class="col-md-2">
            <strong>Sucursal origen: <strong class="text_beta">@orden_g.numero_sucursal</strong></strong>
            <br />
            <strong>Numero cuenta: <strong class="text_beta">@orden_g.numero_cuenta</strong></strong>
        </div>
        <div class="col-md-2">
            <strong>Fecha aplicación: <strong class="text_beta">@string.Format(orden_g.fecha_aplicacion.Value.ToShortDateString(), "dd/MM/yyyy")</strong></strong>
        </div>
        <div class="col-md-2">
            <strong>Fecha registro: <strong class="text_beta">@string.Format(orden_g.fecha_aplicacion.Value.ToShortDateString(), "dd/MM/yyyy")</strong></strong>
            <br />
            <strong>Usuario registró: <strong class="text_beta">@orden_g.C_usuarios_corporativo.usuario</strong></strong>
        </div>
    </div>

    <table class="table table-striped table-bordered" id="datatable_orden_pago_detalle">
        <thead>
            <tr class="bg-beta">
                <th>Beneficiario</th>
                <th>Concepto/Instrucciones</th>
                <th>Sucursal destino</th>
                <th>Importe</th>
                <th>Remitente</th>
                <th>Eliminar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="text-center">
                    <td>@item.nombre_beneficiario</td>
                    <td>@item.instrucciones</td>
                    <td>@item.sucursal_destino</td>
                    <td>@item.importe.Value.ToString("N2")</td>
                    <td>@item.remitente</td>
                    <td>
                        <button class="btn btn_beta_danger" onclick="EliminarBeneficiarioOrden(@item.id_contabilidad_orden_pago_g, @item.id_contabilidad_orden_pago_d);"><i class="fa fa-remove"></i></button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h3 class="text-center text-danger">No se encontraron registros</h3>
}