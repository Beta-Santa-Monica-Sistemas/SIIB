@model IEnumerable<Beta_System.Models.C_compras_facturas_proveedores>

@if (Model != null)
{
    <div class="table-responsive">
        <table class="table table-striped table-bordered" id="tabla_facturas_pendientes_importacion">
            <thead>
                <tr class="bg-beta text-center">
                    <th>Importar</th>
                    <th>Folio factura</th>
                    <th>No. Orden</th>
                    <th>Proveedor</th>
                    <th>Fecha registro</th>
                    <th>Subtotal</th>
                    <th>IVA</th>
                    <th>IVA retenido</th>
                    <th>ISR</th>
                    <th>Importe</th>
                    <th>Moneda</th>
                    <th>Fecha de factura</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td><input type="checkbox" class="form-control checks_facturas" id="factura_@item.id_factura_orden" style="min-height: 25px; width: 100%;" checked /></td>
                        <td>@item.folio_factura</td>
                        <td>@item.id_compras_orden_g</td>
                        <td>@item.C_compras_proveedores.razon_social</td>
                        <td>@String.Format(item.fecha_registro.ToString(), "dd/mm/yyyy hh:mm")</td>
                        <td>@string.Format("{0:C}", item.subtotal)</td>
                        <td>@string.Format("{0:C}", item.iva_monto)</td>
                        <td>@string.Format("{0:C}", item.iva_retenido_monto)</td>
                        <td>@string.Format("{0:C}", item.isr_monto)</td>
                        <td>@string.Format("{0:C}", item.total)</td>
                        <td>@item.moneda</td>
                        <td>@String.Format(item.fecha_factura.Value.ToShortDateString(), "dd/mm/yyyy")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-3">
            <strong>Nombre de la importación:</strong>
            <input type="text" class="form-control" id="nombre_importacion" />
        </div>
        <div class="col-md-7"></div>
        <div class="col-md-2 text-right"><button class="btn btn_beta" onclick="GenerarImportacionFacturas();">Importar facturas</button></div>
    </div>
}
else
{
    <h3 class="text-danger">Ingresa una fecha de inicio y fin</h3>
}


