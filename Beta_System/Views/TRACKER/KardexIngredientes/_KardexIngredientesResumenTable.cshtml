@model IEnumerable<Beta_System.Models.C_tracker_movimientos>

@if (Model.Count() > 0)
{
    int bandera = 0;
    <table class="table table-striped table-bordered table-hover" id="datatable_kardex_ingredientes_resumen">
        <thead>
            <tr class="bg-beta text-center">
                <th>@Model.FirstOrDefault().C_tracker_establos.nombre_establo</th>
                <th>@ViewBag.fecha_inicio</th>
                <th>@ViewBag.fecha_fin</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var (item, index) in Model.GroupBy(x => x.id_ing).Select((valor, indice) => (valor, indice)))
            {
                if (index == 0)
                {
                    <tr class="text-center">
                        <td><strong>Clave</strong></td>
                        <td><strong>Ingrediente</strong></td>
                        <td><strong>Consumo</strong></td>
                    </tr>
                }
                <tr class="text-center">
                    <td>@item.FirstOrDefault().ing_cve</td>
                    <td>@item.FirstOrDefault().ing_nombre</td>
                    <td>@item.Sum(x => x.peso_real).Value.ToString("N2")</td>
                </tr>
            }
        </tbody>
    </table>
}
else{
    <h3 class="text-center text-danger">NO SE ENCONTRÓ INFORMACIÓN</h3>
}
