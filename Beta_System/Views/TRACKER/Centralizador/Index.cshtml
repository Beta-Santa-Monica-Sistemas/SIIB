
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<div class="page_title">
    <div class="counter_section">
        <h1>Centralizador de los trackers</h1>
    </div>
</div>

<div class="column2 counter_section">
    <div class="row">
        <div class="col-md-3 form-group">
            <strong>Establo:</strong>
            <select class="form-control id_establo_select" id="id_establo"></select>
        </div>

        <div class="col-md-3 form-group">
            <strong>Fecha inicio:</strong>
            <input type="date" class="form-control" id="fecha_inicio" />
        </div>

        <div class="col-md-3 form-group">
            <strong>Fecha fin:</strong>
            <input type="date" class="form-control" id="fecha_fin" />
        </div>

        <div class="col-md-3 form-group">
            <br />
            <button class="btn btn_beta_icon" onclick="CentralizarInformacionTrackerEstablo();"><i class="fa fa-search"></i></button>
        </div>
    </div>
    <hr />

    <div id="progress-container" style="width:100%; background:#ddd;">
        <div id="progress-bar" style="width: 0%; background: #1ef134; height: 40px; border-radius: 1rem;"></div>
    </div>

</div>


@Scripts.Render("~/bundles_AlimentacionTracker/js")


<script>
    $(window).on("load", function () {
        ConsultarEstablosUsuarioSelect(0);

        $('input[type="date"]').val(yesterday);
        $('.id_establo_select option[value="4"]').remove();
    });
</script>