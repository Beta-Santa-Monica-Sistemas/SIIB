@model List<Beta_System.Models.C_tracker_ingredientes_establos>


<table class="table table-striped table-bordered">
    <thead>
        <tr class="bg-beta text-center">
            <th>Seleccionar</th>
            <th>Clave</th>
            <th>Descripción</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="text-center" id="row_ing_@item.id_ing">
                <td>
                    <input type="checkbox" class="form-control checks_ingredientes" value="@item.id_ing" style="min-height: 20px; height: 20px;" 
                           onchange="SeleccionarForrajesAsociacion(@item.id_ingrediente);" id="ing_check_@item.id_ing" />
                </td>
                <td>@item.clave</td>
                <td class="text-left">@item.descripcion</td>
            </tr>
        }
    </tbody>
</table>