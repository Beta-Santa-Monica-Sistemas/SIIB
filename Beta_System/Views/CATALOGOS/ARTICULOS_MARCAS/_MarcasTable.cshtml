@model IEnumerable<Beta_System.Models.C_articulos_marcas>

<table class="table table-striped table-bordered w-100" id="tabla_marcas" width="100%">
    <thead>
        <tr class="bg-beta text-center">
            <th>Marca</th>
            <th>Estatus</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="text-center">
                <td>@item.marca</td>
                @if (@item.activo == true)
                {
                    <td style="color: green"><i class="fa fa-check"></i></td>
                }
                else
                {
                    <td style="color: red"><i class="fa fa-times"></i></td>
                }
                <td class="text-center">
                    <button class="btn btn_beta_icon" onclick="MostrarInformacionMarca(@item.id_marca);"><i class="fa fa-edit"></i></button>
                </td>
            </tr>
        }
    </tbody>
</table>