@model IEnumerable<Beta_System.Models.C_articulos_clasificaciones>

<table class="table table-striped table-bordered w-100" id="tabla_clasificaciones" width="100%">
    <thead>
        <tr class="bg-beta text-center">
            <th>Clasificacion</th>
            <th>Activo</th>
            <th>Edicion</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="text-center">
                <td>@item.nombre_clasificacion</td>

                @if (item.activo == true)
                {
                    <td><i onclick="OnOff(false ,@item.id_articulo_clasificacion)" class="fa fa-3x fa-toggle-on" style="color:lightgreen;"></i></td>
                }
                else
                {
                    <td><i onclick="OnOff(true ,@item.id_articulo_clasificacion)" class="fa fa-3x fa-toggle-on" style="color:gray;"></i></td>
                }

                <td>
                    <button onclick="MostrarInformacionClasificacion(@item.id_articulo_clasificacion)" class="btn btn_beta_icon"><i class="fa fa-edit"></i></button>
                </td>
            </tr>
        }
    </tbody>
</table>