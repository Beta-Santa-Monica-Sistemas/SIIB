@model IEnumerable<Beta_System.Models.C_establos_equipos>


<table class="table table-striped table-bordered" id="datatable_equipos">
    <thead>
        <tr class="bg-beta">
            <th>Clave</th>
            <th>Nombre del equipo</th>
            <th>Observaciones</th>
            <th class="text-center">Editar</th>
            <th class="text-center">Estatus</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var equipo in Model)
        {
            <tr>
                <td><strong>@equipo.clave_equipo</strong></td>
                <td>@equipo.nombre_equipo</td>
                <td>@equipo.observaciones</td>

                <td class="text-center">
                    <button class="btn btn_beta_icon" onclick="EditarEquipo('@equipo.clave_equipo','@equipo.nombre_equipo', '@equipo.observaciones', @equipo.id_establo_equipo);"><i class="fa fa-edit"></i></button>
                </td>
                <td class="text-center">
                    @if (equipo.activo == true)
                    {
                        <i class="fa fa-3x fa-toggle-on" onclick="OnOffEquipoEstablo(@equipo.id_establo_equipo, false,'@equipo.nombre_equipo');" style="color:lightgreen;"></i>
                    }
                    else
                    {

                        <i class="fa fa-3x fa-toggle-on" onclick="OnOffEquipoEstablo(@equipo.id_establo_equipo, true, '@equipo.nombre_equipo');" style="color:gray;"></i>
                    }

                </td>
            </tr>
        }
    </tbody>
</table>
