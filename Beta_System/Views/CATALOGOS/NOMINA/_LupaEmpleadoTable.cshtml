@model IEnumerable<Beta_System.Models.C_nomina_empleados>
@{
    var modo = ViewBag.modo_movimiento;
}
<table class="table table-striped table-bordered" id="tabla_nomina_empleados" data-toggle="table" data-search="true">
    <thead>
        <tr class="bg-beta text-center">
            <th>Clave</th>
            <th>Número</th>
            <th>Nombre</th>
            <th>Puesto</th>
            <th>Asignar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderBy(x => x.Nombre_completo))
        {
            <tr class="text-center">
                <td>@item.Empleado_id</td>
                <td>@item.Numero</td>
                <td>@item.Nombre_completo</td>
                <td>@item.C_nomina_puestos.nombre_puesto</td>
                @if (modo == 1)
                {

                    int negra = 0;
                    if (@item.Lista_negra == true) { negra = 1; }
                    <td class="text-center">
                        <button class="btn btn_beta_icon" onclick="AsignarIncidenciaEmpleado(@item.Empleado_id,'@item.Nombre_completo',@item.Reg_patronal_id,'@item.Salario_diario','@item.Salario_hora','@item.Salario_integ','@item.Tipo_salario',@item.Puesto_no_id,@item.Depto_no_id,'@item.Estatus','@negra');"><i class="fa fa-plus"></i></button>
                    </td>
                }
                else
                {
                    <td class="text-center">
                        <button class="btn btn_beta_icon" onclick="AsignarEstatusEmpleado('@item.Estatus'); AsignarInfoEmpleado(@item.Empleado_id,'@item.Nombres @item.Apellido_paterno  @item.Apellido_materno','@item.C_nomina_puestos.nombre_puesto','@item.C_nomina_departamentos.nombre_departamento', '@item.Depto_no_id');"><i class="fa fa-plus"></i></button>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
