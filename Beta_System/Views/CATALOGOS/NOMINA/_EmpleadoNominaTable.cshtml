@model IEnumerable<Beta_System.Models.C_nomina_empleados>

@if (ViewBag.modo == 1)
{
    <table class="table table-striped table-bordered" id="tabla_Nomina" data-toggle="table" data-search="true">
        <thead>
            <tr class="bg-beta text-center">
                <th>Seleccionar</th>
                <th>Número nomina</th>
                <th>Nombre</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr id="tr_Nomina_@item.Empleado_id">
                    <td> <input type="radio" class="form-control" name="radio_nomina" value="@item.Empleado_id" /> </td>
                    <td>@item.Numero</td>
                    <td>@(item.Nombres + " " + item.Apellido_paterno + " " + item.Apellido_materno)</td>
                </tr>
            }
        </tbody>
    </table>
}