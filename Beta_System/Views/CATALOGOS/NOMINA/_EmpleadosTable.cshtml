@model IEnumerable<Beta_System.Models.C_nomina_empleados>
<table class="table table-striped table-bordered" id="tabla_nomina_empleados" data-toggle="table" data-search="true">
    <thead>
        <tr class="bg-beta text-center">
            <th>Clave microsip</th>
            <th>#</th>
            <th>Nombre</th>
            <th>Puesto</th>
            <th>Ciudad</th>
            <th>Estatus</th>
            <th>Mostrar</th>
            <th>Editar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderBy(x=>x.Nombre_completo))
        {
            <tr class="text-center">
                <td>@item.Empleado_id</td>
                <td>@item.Numero</td>
                <td>@item.Nombre_completo</td>
                <td>@item.C_nomina_puestos.nombre_puesto</td>
                @if (item.Ciudad_id != null)
                {
                    <td>@item.C_direcciones_ciudades.nombre_ciudad</td>
                }
                else
                {
                    <td>Ninguna</td>
                }
                @if (item.Estatus == "A")
                {
                    <td style="background-color: #B0D8B5; color:white;" class="text-center"><strong>ACTIVO</strong></td>
                }
                @if (item.Estatus == "I")
                {
                    <td style="background-color: #A6A6A6; color: white;" class="text-center"><strong>INACTIVO</strong></td>
                }
                @if (item.Estatus == "B")
                {
                    <td style="background-color: #EC5D4A; color: white;" class="text-center"><strong>BAJA</strong></td>
                }
                <td class="text-center">
                    <button class="btn btn_beta_icon" onclick="MostrarInfoEmpleado(@item.Empleado_id,1);"><i class="fa fa-eye"></i></button>
                </td>
                <td class="text-center">
                    <button class="btn btn_beta_icon" onclick="MostrarInfoEmpleado(@item.Empleado_id,3);"><i class="fa fa-edit"></i></button>
                </td>
            </tr>
        }
    </tbody>
</table>
