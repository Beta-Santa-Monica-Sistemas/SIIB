@model IEnumerable<Beta_System.Models.hr_employee>
@{
    var modo = ViewBag.modo_checador;
}
<table class="table table-striped table-bordered" id="tabla_lupa_checador" data-toggle="table" data-search="true">
    <thead>
        <tr class="bg-beta text-center">
            @if (modo == 2)
            {
                <th>Seleccionar</th>
            }
            <th>Número</th>
            <th>Nombre</th>
            @if (modo == 1)
            {
                <th>Asignar</th>
            }

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="text-center">
                @if (modo == 2)
                {
                    <td><input type="radio" class="form-control" name="id_RadiosChecador" value="@item.id" /></td>
                }
                <td>@item.emp_pin</td>
                <td>@item.emp_firstname @item.emp_lastname</td>
                @if (modo == 1)
                {
                    <td><button class="btn btn_beta_icon" onclick="VincularEmpleadoNomina(@item.id,'@item.emp_firstname @item.emp_lastname',@item.emp_pin)"><i class="fa fa-plus"></i></button></td>
                }

            </tr>
        }
    </tbody>
</table>
