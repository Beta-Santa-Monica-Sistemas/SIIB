@model IEnumerable<Beta_System.Models.C_envios_leche_d_fichas>
    @{ 
        string auxiliar = "_";
    }
<table class="table table-striped table-bordered w-100" id="datatable_envio_fichas" width="100%">
    <thead>
        <tr class="bg-beta text-center">
            <th style="min-width:10%; max-width:10%;">Seleccione</th>
            <th style="min-width:10%; max-width:10%;">Ficha</th>
            <th style="min-width:10%; max-width:10%;">Folio</th>
            <th style="min-width:20%; max-width:20%;">Producto</th>
            <th style="min-width:20%; max-width:20%;">Cliente</th>
            <th style="min-width:10%; max-width:10%;">Tanque</th>
            <th style="min-width:10%; max-width:10%;">Sellos</th>
            <th style="min-width:10%; max-width:10%;">Litros</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="text-center">
                <td>
                    <input id="check_envio_@item.id_envio_leche_d@auxiliar@item.C_bascula_fichas.id_envio_leche_cliente_ms" type="checkbox" class="form-control check_envio" style="width: 20px; height: 20px;" onclick="IndicadorTipoEnvioLeche();">
                </td>
                <td>@item.id_ficha_bascula</td>
                <td>@item.folio_ficha</td>
                <td>@item.C_bascula_fichas.C_articulos_catalogo.nombre_articulo</td>
                <td>@item.C_bascula_fichas.C_envios_leche_clientes.razon_social</td>
                <td>@item.tanque</td>
                <td>@item.sello</td>
                <td>@item.litros_ficha</td>
            </tr>
        }
    </tbody>
</table>