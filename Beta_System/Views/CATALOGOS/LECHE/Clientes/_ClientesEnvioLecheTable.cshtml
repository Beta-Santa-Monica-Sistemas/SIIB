
@model IEnumerable<Beta_System.Models.C_envios_leche_clientes>
<table class="table table-striped table-bordered w-100" id="datatable_cliente_leche" width="100%">
    <thead>
        <tr class="bg-beta text-center">
            <th>Nombre comercial</th>
            <th>Razon social</th>
            <th>Estatus</th>
            <th>Editar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="text-center">
                <td>@item.nombre_comercial</td>
                <td>@item.razon_social</td>
                <td class="text-center">
                    @if (item.activo == true)
                    {
                        <i class="fa fa-3x fa-toggle-on" onclick="OnOffClientesEnvioLeche('@item.id_envio_leche_cliente_ms',false);" style="color:lightgreen;"></i>
                    }
                    else
                    {

                        <i class="fa fa-3x fa-toggle-on" onclick="OnOffClientesEnvioLeche('@item.id_envio_leche_cliente_ms',true);" style="color:gray;"></i>
                    }

                </td>
                <td class="text-center">
                    <button class="btn btn_beta_icon" onclick="AsignarInformacionClientesEnvioLeche(@item.id_envio_leche_cliente_ms);"><i class="fa fa-edit"></i></button>
                </td>
            </tr>
        }
    </tbody>
</table>