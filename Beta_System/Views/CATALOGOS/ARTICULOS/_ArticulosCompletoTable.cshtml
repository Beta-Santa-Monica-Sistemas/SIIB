@model IEnumerable<Beta_System.Models.C_articulos_catalogo>

@{
    List<int> permisos = Session["PermisosModulo"] as List<int>;
}

<table class="table table-striped table-bordered w-100" id="tabla_articulos" width="100%">
    <thead>
        <tr class="bg-beta text-center">
            <th>Clave</th>
            <th>Artículo</th>
            <th>Observaciónes</th>
            <th>Medida</th>
            <th>Tipo</th>
            <th>Clasificación</th>
            <th>Rubro</th>
            <th>Marca</th>
            <th>Almacenable</th>
            <th>Activo</th>
            @if (permisos.Contains(1014))
            {
                <th>Edición</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="text-center">
                <td id="@item.id_articulo">@item.clave</td>
                <td>@item.nombre_articulo</td>
                <td>@item.descripcion_articulo</td>
                <td>@item.C_unidades_medidas.unidad_medida</td>
                <td>@item.C_articulos_tipos.nombre_tipo</td>
                <td>@item.C_articulos_clasificaciones.nombre_clasificacion</td>
                <td>@item.C_articulos_tipos_requisicion.tipo_requisicion</td>
                <td>@item.C_articulos_marcas.marca</td>
                @if (item.almacenable == true)
                {
                    <td style="color: green"><i class="fa fa-check"></i></td>
                }
                else
                {
                    <td style="color: red"><i class="fa fa-times"></i></td>
                }
                @if (item.activo == true)
                {
                    <td style="color: green"><i class="fa fa-check"></i></td>
                }
                else
                {
                    <td style="color: red"><i class="fa fa-times"></i></td>
                }
                @if (permisos.Contains(1014))
                {
                    <td class="text-center">
                        <button class="btn btn_beta_icon" onclick="ObtenerInfArticulo(@item.id_articulo); ObtenerPrecArticulo(@item.id_articulo);  AccionArticulo(1);"><i class="fa fa-edit"></i></button>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>