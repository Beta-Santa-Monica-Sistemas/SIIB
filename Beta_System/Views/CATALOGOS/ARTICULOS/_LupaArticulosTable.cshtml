@model IEnumerable<Beta_System.Models.C_articulos_catalogo>

@{
    List<int> permisos = Session["PermisosModulo"] as List<int>;
    var modo = ViewBag.articulomodo;
    var parte = "|";
}

<table class="table table-striped table-bordered w-100" id="tabla_articulos_lupa" width="100%">
    <thead>
        <tr class="bg-beta text-center">
            <th>Clave</th>
            <th>Artículo</th>
            <th>Observaciónes</th>
            <th>Medida</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="text-center" style="font-size:13px">
                <td id="@item.id_articulo">@item.clave</td>
                <td>@item.nombre_articulo</td>
                <td>@item.descripcion_articulo</td>
                <td>@item.C_unidades_medidas.unidad_medida</td>
                <td class="text-center">
                    @if (modo != 3)
                    {
                        <button class="btn btn_beta_icon" onclick="InformacionLupaArticulo('@item.clave',@modo);"><i class="fa fa-plus"></i></button>
                    }
                    else
                    {

                        <button class="btn btn_beta_icon" onclick="InformacionLupaArticulo('@(item.clave + parte + item.nombre_articulo)', @modo);"><i class="fa fa-plus"></i></button>

                    }
                </td>
            </tr>
        }
    </tbody>
</table>

