@model List<Beta_System.Models.C_alimentacion_forrajes_facturas_g>

    @if (Model.Count() > 0)
    {
    <table class="table table-striped table-bordered" id="datatable_fichas_facturas">
        <thead>
            <tr class="bg-beta text-center">
                <th>Factura</th>
                <th>Proveedor</th>
                <th>Fecha</th>
                <th>Toneladas</th>
                <th>Importe</th>
                <th>Moneda</th>
                <th>Usuario registra</th>
                <th>Ver</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr class="text-center">
                <td>@item.folio_factura</td>
                <td>@item.C_compras_proveedores.razon_social</td>
                <td>@string.Format(item.fecha_factura.Value.ToShortDateString(), "dd/MM/yyyy")</td>
                <td>@item.toneladas_totales.Value.ToString("N3")</td>
                <td>@item.importe.Value.ToString("N2")</td>
                <td>@item.C_tipos_moneda.clave_fiscal</td>
                <td>@item.C_usuarios_corporativo.C_empleados.nombres @item.C_usuarios_corporativo.C_empleados.apellido_paterno</td>
                <td><button class="btn btn_beta_icon" onclick="ConsultarFacturaForrajeDetalle(@item.id_alimentacion_factura_forraje_g);"><i class="fa fa-bars"></i></button></td>
            </tr>
            }
        </tbody>
    </table>
    }
    else
    {
    <h3 class="text-center text-danger">No se encontraron registros</h3>
    }
