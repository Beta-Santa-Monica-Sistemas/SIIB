
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MainLayout.cshtml";
    List<int> permisos = Session["PermisosModulo"] as List<int>;
}

<div class="page_title">
    <div class="counter_section">
        <h1>Recepciones de forrajes</h1>
        <div class="row">
            <div class="col-md-12">
                <ul class="nav nav-tabs">
                    @if (permisos.Contains(4042))
                    {
                        <li> <a data-toggle="tab" href="#recepcion_tab">Recepción <i class="fa fa-2x fa-check ml-2"></i></a> </li>
                    }
                    @if (permisos.Contains(4043))
                    {
                        <li> <a data-toggle="tab" href="#recepcion_facturadas_tab">Recepceiones facturadas <i class="fa fa-2x fa-list ml-2"></i></a> </li>
                    }
                    @if (permisos.Contains(4044))
                    {
                        <li> <a data-toggle="tab" href="#facturas_tab">Facturas de forraje <i class="fa fa-2x fa-money ml-2"></i></a> </li>
                    }
                </ul>
            </div>
        </div>

    </div>
</div>


<div class="column2 counter_section">
    <div class="tab-content">

        @if (permisos.Contains(4042))
        {
            <div id="recepcion_tab" class="tab-pane fade in active show">
                <h3 class="text-center">RECEPCIÓN DE FICHAS</h3>
                <div class="row">
                    @*<div class="col-md-2">
                            <strong>Fecha inicio</strong>
                            <input type="date" class="form-control fechas_inicio" id="fecha_inicio_recepcion_pendiente" />
                        </div>
                        <div class="col-md-2">
                            <strong>Fecha fin</strong>
                            <input type="date" class="form-control" id="fecha_fin_recepcion_pendiente" />
                        </div>*@
                    <div class="col-md-3">
                        <strong>Establo</strong>
                        <select class="form-control id_establo_select" id="id_establo_recepcion_pendiente"></select>
                    </div>
                    <div class="col-md-2">
                        <br />
                        <button class="btn btn_beta_icon" onclick="ConsultarFichasPendientesRecepcion();"><i class="fa fa-search"></i></button>
                    </div>
                    <div class="col-md-4">

                    </div>
                    <div class="col-md-3 text-right">
                        <br />
                        <button class="btn btn_beta" onclick="RecepcionarPendientesRecepcion();"><i class="fa fa-check"></i> Recepcionar fichas</button>
                    </div>
                </div>
                <hr />
                <div class="table-responsive">
                    <div id="div_fichas_pendientes_recepcion"></div>
                </div>
            </div>
        }

        @if (permisos.Contains(4043))
        {
            <div id="recepcion_facturadas_tab" class="tab-pane fade">
                <h3 class="text-center">RECEPCIÓNES FACTURADAS</h3>
                <div class="row">
                    <div class="col-md-2">
                        <strong>Fecha inicio</strong>
                        <input type="date" class="form-control fechas_inicio" id="fecha_inicio_recepcion_factura" />
                    </div>
                    <div class="col-md-2">
                        <strong>Fecha fin</strong>
                        <input type="date" class="form-control" id="fecha_fin_recepcion_factura" />
                    </div>
                    <div class="col-md-2">
                        <strong>Establo</strong>
                        <select class="form-control id_establo_select" id="id_establo_recepcion_factura"></select>
                    </div>
                    <div class="col-md-3">
                        <strong>Proveedor</strong>
                        <select class="form-control select_autocomplete" id="proveedor_recepcion_factura">
                            <option value="0" selected>Todos</option>
                            @{ Html.RenderAction("ConsultarProveedoresTipoBasculaSelect", "CATALOGOS", new { tipo_ficha = 2 });}
                        </select>
                    </div>
                    <div class="col-md-3">
                        <div class="row">
                            <div class="col-md-3">
                                <br />
                                <button class="btn btn_beta_icon" onclick="ConsultarFichasRecepcionadas();"><i class="fa fa-search"></i></button>
                            </div>
                            <div class="col-md-9 text-right">
                                <br />
                                <button class="btn btn_beta" onclick="AgruparfacturasRecepcion();"><i class="fa fa-list mr-2"></i> Agrupar fichas</button>
                            </div>
                        </div>
                    </div>
                </div>
                <hr />
                <div class="table-responsive">
                    <div id="div_fichas_recepcion_facturas"></div>
                </div>
            </div>
        }

        @if (permisos.Contains(4044))
        {
            <div id="facturas_tab" class="tab-pane fade">
                <button style="position:absolute; right:4%;" class="btn btn_beta" onclick="ConsultarFacturasForrajesTable();"><i class="fa fa-search ml-2"></i> Consultar facturas</button>
                <h3 class="text-center">FACTURAS DE FORRAJE</h3>
                <div class="row">
                    <div class="col-md-2">
                        <strong>Fecha inicio</strong>
                        <input type="date" class="form-control fechas_inicio" id="fecha_inicio_factura" />
                    </div>
                    <div class="col-md-2">
                        <strong>Fecha fin</strong>
                        <input type="date" class="form-control" id="fecha_fin_factura" />
                    </div>
                    <div class="col-md-2">
                        <strong>Establo</strong>
                        <select class="form-control id_establo_select" id="id_establo_factura"></select>
                    </div>
                    <div class="col-md-3">
                        <strong>Proveedor</strong>
                        <select class="form-control select_autocomplete" id="proveedor_factura">
                            <option value="0" selected>Todos</option>
                            @{ Html.RenderAction("ConsultarProveedoresTipoBasculaSelect", "CATALOGOS", new { tipo_ficha = 2 });}
                        </select>
                    </div>
                    <div class="col-md-3">
                        <strong>Alimento</strong>
                        <select class="form-control select_autocomplete" id="alimento_factura">
                            <option value="0" selected>Todos</option>
                            @{ Html.RenderAction("ConsultarArticulosBasculaTiposSelect", "CATALOGOS", new { tipo_ficha = 2 });}
                        </select>
                    </div>
                </div>
                <hr />
                <div class="table-responsive">
                    <div id="div_fichas_facturas"></div>
                </div>
            </div>
        }
    </div>
</div>


<!-- Modal AGRUPAR FACTURAS RECEPCIONADAS-->
<div class="modal fade" id="m_recepcion_factura" tabindex="-1" role="dialog" aria-labelledby="m_recepcion_factura_lbl" aria-hidden="true">
    <div class="modal-dialog" role="document" style="width: 98%; min-width:98%;">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="m_recepcion_factura_lbl">Agrupar fichas</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <h3 class="text-center">GENERAR FACTURA</h3>
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr class="bg-beta text-center">
                            <th>Establo</th>
                            <th>Ficha</th>
                            <th>Fecha</th>
                            <th>Proveedor</th>
                            <th>Forraje</th>
                            @*<th>Calidad</th>*@
                            <th>Observaciones</th>
                            <th>Ton. Fact.</th>
                            <th>Precio U.</th>
                            <th>Importe</th>
                            <th>Moneda</th>
                            <th style="display: none;">id_moneda</th>
                        </tr>
                    </thead>
                    <tbody id="tbody_recepcion_factura"></tbody>
                </table>
                <hr />
                <br />

                <div class="row">
                    <div class="col-md-1 text-center">
                        <strong>Factura</strong>
                        <input type="text" class="form-control input_valid" id="folio_recepcion_factura" />
                    </div>

                    <div class="col-md-2 text-center">
                        <strong>Fecha</strong>
                        <input type="date" class="form-control" id="fecha_recepcion_factura" />
                    </div>

                    <div class="col-md-2 text-center">
                        <strong>Toneladas</strong>
                        <input type="number" class="form-control input_valid" id="total_toneladas_recepcion_factura" />
                    </div>

                    <div class="col-md-2 text-center">
                        <strong>Importe</strong>
                        <input type="number" class="form-control input_valid" id="total_importe_recepcion_factura" />
                    </div>

                    <div class="col-md-1 text-center">
                        <strong>Moneda</strong>
                        <select class="form-control" id="id_moneda_recepcion_factura" style="height:auto !important;" onchange="ConsultarTipoCambio();">
                            <option value="1">MXN</option>
                            <option value="39118">USD</option>
                        </select>
                    </div>
                    <div class="col-md-1 text-center">
                        <strong>Tipo cambio</strong>
                        <input type="number" class="form-control" id="tipo_cambio_recepcion_factura" />
                    </div>

                    <div class="col-md-3 text-left">
                        <div class="row">
                            <div class="col-md-5 text-left">
                                <button class="btn btn_beta_danger" data-dismiss="modal"><i class="fa fa-backward"></i> REGRESAR</button>
                            </div>
                            <div class="col-md-6 text-right">
                                <button class="btn btn_beta" onclick="GenerarFacturaFichasRecepcionadas();"><i class="fa fa-check"></i> GENERAR FACTURA</button>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>



<!-- Modal AGRUPAR FACTURAS RECEPCIONADAS-->
<div class="modal fade" id="m_factura_detalle" tabindex="-1" role="dialog" aria-labelledby="m_factura_detalle_lbl" aria-hidden="true">
    <div class="modal-dialog" role="document" style="width: 70%; min-width:70%;">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="m_factura_detalle_lbl">DETALLE DE FACTURA</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="div_factura_detalle"></div>
            </div>
        </div>
    </div>
</div>




@Scripts.Render("~/bundles_AlimentacionRecepcion/js")

<script>
    $(window).on("load", function () {
        ConsultarEstablosUsuarioSelect(0);
        ConsultarTipoCambio();
        $('input[type="date"]').val(today);
        $('.fechas_inicio').val(last_2_months);

        const todos_option = $('<option>', { value: '0', text: 'Todos' });
        $(".id_establo_select").prepend(todos_option);

        try {
            $(".select_autocomplete").select2({
                placeholder: 'Selecciona un proveedor',
                //dropdownParent: $("#tabulador")
            });
        }
        catch (ex) { }
        $(".id_establo_select").val("0");
    });

</script>
