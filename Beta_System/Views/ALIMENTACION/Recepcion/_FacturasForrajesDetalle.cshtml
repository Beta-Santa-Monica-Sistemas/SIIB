@model List<Beta_System.Models.C_alimentacion_forrajes_facturas_d>


@if (Model.Count() > 0)
{
    decimal total_toneladas = 0;
    decimal total_factura = 0;
    decimal total_importe = 0;

    var factura_g = Model.FirstOrDefault().C_alimentacion_forrajes_facturas_g;
    <div class="container-fluid p-3" style="border: 3px solid #2e87d7;">
        <div class="row">
            <div class="col-md-8">
                <h2 style="margin: 5px;">@factura_g.C_compras_proveedores.razon_social</h2>
                <h4 style="margin: 5px;">@factura_g.C_compras_proveedores.direccion_1_prov</h4>
                <h4 style="margin: 5px;">RFC: @factura_g.C_compras_proveedores.RFC</h4>
            </div>
            <div class="col-md-4 text-right">
                <h2 class="text-center">Factura</h2>
                <table class="table table-striped table-bordered">
                    <tr class="bg-beta text-center">
                        <th>Fecha</th>
                        <th>Folio</th>
                    </tr>
                    <tr class="text-center">
                        <td>@string.Format(factura_g.fecha_factura.Value.ToShortDateString(), "dd/MM/yyyy")</td>
                        <td>@factura_g.folio_factura</td>
                    </tr>
                </table>
            </div>
        </div>
        <hr />
        <h3 class="text-center">FICHAS DE BÁSCULA</h3>
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr class="bg-beta text-center">
                        <th>Establo</th>
                        <th>Ficha</th>
                        <th>Fecha</th>
                        <th>Alimento</th>
                        <th>Observaciones</th>
                        <th>Toneladas</th>
                        <th>Precio</th>
                        <th>Importe</th>
                        <th>Moneda</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        decimal importe = (decimal)item.toneladas_ficha * (decimal)item.precio_ficha;
                        total_importe += importe;

                        total_toneladas += (decimal)item.toneladas_ficha;
                        total_factura += (decimal)item.precio_ficha;
                        <tr class="text-center">
                            <td>@item.C_bascula_fichas.C_establos.siglas</td>
                            <td>@item.id_bascula_ficha</td>
                            <td>@string.Format(item.C_bascula_fichas.fecha_registo.Value.ToShortDateString(), "dd/MM/yyyy")</td>
                            <td>@item.C_bascula_fichas.C_articulos_catalogo.nombre_articulo</td>
                            <td>@item.C_bascula_fichas.observaciones</td>
                            <td>@item.toneladas_ficha.Value.ToString("N3")</td>
                            <td>@item.precio_ficha.Value.ToString("N2")</td>
                            <td>@importe.ToString("N2")</td>
                            <td>@item.C_tipos_moneda.clave_fiscal</td>
                        </tr>
                    }
                    <tr class="bg-beta text-center">
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td><strong>TOTAL</strong></td>
                        <td><strong>@total_toneladas.ToString("N3")</strong></td>
                        <td><strong>$ @total_factura.ToString("N2")</strong></td>
                        <td><strong>$ @total_importe.ToString("N2")</strong></td>
                        <td><strong>@factura_g.C_tipos_moneda.clave_fiscal</strong></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <h1 class="text-center text-danger">Ocurrió un error al consultar la factura. Contacte a desarrollo</h1>
}