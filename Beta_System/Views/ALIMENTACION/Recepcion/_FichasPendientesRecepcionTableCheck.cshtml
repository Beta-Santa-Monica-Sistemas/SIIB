@model List<Beta_System.Models.C_bascula_fichas>

    @if (Model.Count() > 0)
    {
    <table class="table table-striped table-bordered" id="datatable_fichas_pendientes_recepcion">
        <thead>
            <tr class="bg-beta text-center">
                <th>Mov.</th>
                <th>Ficha</th>
                <th>Fecha 1ra pesada</th>
                <th>Producto</th>
                <th>Peso (Kg)</th>
                <th>Observaciones</th>
                <th>Proveedor</th>
                <th>Chofer</th>
                <th>Placas</th>
                <th>Hr 1° pesada</th>
                <th>Hr 2° pesada</th>
                <th>Fecha 2da pesada</th>
                <th>Selección</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr class="text-center">
                <td>@item.C_bascula_tipos_movimientos.nombre_movimiento</td>
                <td>@item.id_bascula_ficha</td>
                <td>@string.Format(item.fecha_registo.Value.ToShortDateString(), "dd/MM/yyyy")</td>
                <td><strong>@item.C_articulos_catalogo.nombre_articulo</strong></td>
                <td>@item.peso_t</td>
                <td>@item.observaciones</td>
                <td><strong>@item.C_compras_proveedores.razon_social (@item.C_compras_proveedores.C_tipos_moneda.clave_fiscal)</strong></td>
                <td>@item.chofer</td>
                <td>@item.placas</td>
                <td>@item.fecha_registo.Value.ToString("hh:mm tt")</td>
                <td>@item.fecha_segunda_pesada.Value.ToString("hh:mm tt")</td>
                <td>@string.Format(item.fecha_segunda_pesada.Value.ToShortDateString(), "dd/MM/yyyy")</td>
                <td>
                    <input type="number" value="@item.id_compras_proveedor" id="prov_ficha_recepcion_@item.id_bascula_ficha" style="display:none;" />
                    <input type="checkbox" name="seleccion_recepcion_pendiente" value="@item.id_bascula_ficha" class="form-control" style="height:25px; min-height:25px;" />
                </td>
            </tr>
            }
        </tbody>
    </table>
    }
    else
    {
    <h3 class="text-danger text-center">No se encontraron fichas</h3>
    }


