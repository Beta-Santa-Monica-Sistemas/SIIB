@model List<Beta_System.Models.C_alimentacion_programa_g>

@if (Model.Count() > 0)
{
    <table class="table table-striped table-bordered" id="datatable_consulta_prg">
        <thead>
            <tr class="bg-beta text-center">
                <th>No. programación</th>
                <th>Establo</th>
                <th>Fecha inicio</th>
                <th>Referencia</th>
                <th>No. semanas</th>
                <th>Usuario registra</th>
                <th>Fecha registro</th>
                <th>Mostrar</th>
                <th>Generar req.</th>
                <th>Ordenes</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="text-center">
                    <td>@item.id_alimentacion_programa_g</td>
                    <td>@item.C_establos.nombre_establo</td>
                    <td>@string.Format(item.fecha_inicio.Value.ToShortDateString(), "dd/MM/yyyy")</td>
                    <td>@item.nombre_programacion</td>
                    <td>@item.semanas_programa</td>
                    <td>@item.C_usuarios_corporativo.C_empleados.nombres @item.C_usuarios_corporativo.C_empleados.apellido_paterno</td>
                    <td>@string.Format(item.fecha_registro.Value.ToShortDateString(), "dd/MM/yyyy")</td>
                    <td>
                        <button class="btn btn_beta_icon" onclick="ConsultarProgramaAlimentacionDetalle(@item.id_alimentacion_programa_g);"><i class="fa fa-bars"></i></button>
                    </td>
                    <td>
                        <button class="btn btn_beta_icon" onclick="return alert('En desarrollo');"><i class="fa fa-check"></i></button>
                    </td>
                    <td>
                        <button class="btn btn_beta_icon" onclick="return alert('En desarrollo');"><i class="fa fa-print"></i></button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h3 class="text-danger text-center">NO SE ENCONTRARON REGISTROS</h3>
}



